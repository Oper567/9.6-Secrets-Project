<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover" />
    <title>Apugo | Whispers</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');

        body { 
            background-color: #020617; 
            height: 100vh; 
            width: 100vw;
            display: flex; 
            flex-direction: column; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            overflow: hidden; 
        }
        
        .pane-container { 
            position: relative; 
            display: flex; 
            height: 100%; 
            transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1); 
        }

        @media (max-width: 768px) {
            .pane-container { width: 200vw; }
            .friends-pane, .chat-pane { width: 100vw; height: 100%; }
            .show-chat { transform: translateX(-100vw); }
        }

        @media (min-width: 769px) {
            .pane-container { width: 100%; }
            .friends-pane { width: 350px; border-right: 1px solid rgba(255,255,255,0.05); }
            .chat-pane { flex: 1; }
        }

        .chat-container { 
            flex: 1; 
            overflow-y: auto; 
            display: flex; 
            flex-direction: column; 
            scrollbar-width: none;
            padding-bottom: 20px;
        }

        .bubble { 
            max-width: 75%; 
            padding: 10px 14px; 
            font-size: 14px; 
            margin-bottom: 4px; 
            border-radius: 1.2rem; 
            line-height: 1.4; 
            position: relative; 
            word-wrap: break-word;
        }
        .bubble-me { 
            background: #2563eb; 
            color: white; 
            border-bottom-right-radius: 4px; 
            align-self: flex-end;
            margin-right: 8px;
        }
        .bubble-them { 
            background: #1e293b; 
            color: #cbd5e1; 
            border-bottom-left-radius: 4px; 
            border: 1px solid rgba(255,255,255,0.05);
            align-self: flex-start;
            margin-left: 8px;
        }
        
        .friend-item.active { background-color: rgba(37, 99, 235, 0.1); border-left: 4px solid #2563eb; }
        .glass-nav { background: rgba(15, 23, 42, 0.95); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255,255,255,0.05); }
        .typing-dot { width: 4px; height: 4px; background: #3b82f6; border-radius: 50%; animation: blink 1.4s infinite; }
        @keyframes blink { 0%, 100% { opacity: 0.2; } 50% { opacity: 1; } }
    </style>
</head>

<body class="text-slate-200">

<nav class="glass-nav p-3 shrink-0">
    <div class="max-w-7xl mx-auto flex items-center gap-3">
        <button id="mobileBack" class="hidden text-slate-400 p-2" onclick="closeChat()">
            <i class="fas fa-chevron-left text-lg"></i>
        </button>
        
        <a href="/feed" id="navHomeLink" class="text-slate-400 hover:text-white p-2">
            <i class="fas fa-arrow-left"></i>
        </a>

        <div class="flex-1 min-w-0 flex items-center gap-3">
            <div id="activeChatAvatar" class="hidden w-9 h-9 rounded-full overflow-hidden border border-slate-700 bg-slate-800 flex items-center justify-center text-[10px] font-black text-blue-500 uppercase">
                </div>
            <div>
                <h1 id="chatHeaderTitle" class="font-black text-blue-500 italic text-sm uppercase tracking-tighter">Whispers</h1>
                <p id="chatStatus" class="text-[9px] text-slate-500 uppercase font-black truncate tracking-widest">Village Square</p>
            </div>
        </div>

        <div id="chatActions" class="hidden relative group">
            <button class="p-2 text-slate-500"><i class="fas fa-ellipsis-v"></i></button>
            <div class="absolute right-0 mt-2 w-48 bg-slate-900 border border-slate-800 rounded-2xl hidden group-hover:block shadow-2xl z-50 overflow-hidden">
                <button onclick="clearChat()" class="w-full text-left px-4 py-3 text-[10px] font-black uppercase text-red-500 hover:bg-red-500/10 transition">Burn History</button>
            </div>
        </div>
    </div>
</nav>

<div class="flex-1 overflow-hidden">
    <div id="paneContainer" class="pane-container">
        
        <aside class="friends-pane bg-slate-950 flex flex-col">
            <div class="p-4 border-b border-white/5">
                <div class="relative">
                    <input type="text" id="globalSearch" placeholder="Search village..." 
                        class="w-full bg-slate-900 border border-slate-800 rounded-2xl py-2.5 pl-10 pr-4 text-xs outline-none text-white focus:border-blue-600 transition-all">
                    <i class="fas fa-search absolute left-4 top-3.5 text-slate-600 text-xs"></i>
                </div>
            </div>
            
            <div class="flex-1 overflow-y-auto">
                <% if (friends && friends.length > 0) { %>
                    <% friends.forEach(f => { %>
                        <div id="friend-<%= f.id %>" class="friend-item p-4 flex items-center gap-4 cursor-pointer border-b border-white/5 hover:bg-white/5 transition-all" 
                             onclick="selectFriend('<%= f.id %>', `<%= f.email.split('@')[0] %>`, `<%= f.profile_pic %>`)">
                            
                            <div class="relative shrink-0 w-11 h-11 bg-slate-800 rounded-full flex items-center justify-center border border-slate-700 overflow-hidden">
                                <% if (f.profile_pic) { %>
                                    <img src="<%= f.profile_pic %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <span class="font-black text-blue-500 text-xs"><%= f.email[0].toUpperCase() %></span>
                                <% } %>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-950 rounded-full <%= f.is_online ? 'bg-green-500' : 'bg-slate-600' %>"></span>
                            </div>

                            <div class="flex-1 min-w-0">
                                <div class="flex justify-between items-center mb-0.5">
                                    <span class="text-xs font-black block truncate text-slate-100 uppercase tracking-tight">@<%= f.email.split('@')[0] %></span>
                                    <% if (f.unread_count > 0) { %>
                                        <span class="bg-blue-600 text-[8px] font-black px-1.5 py-0.5 rounded-full animate-pulse"><%= f.unread_count %></span>
                                    <% } %>
                                </div>
                                <p class="text-[10px] <%= f.unread_count > 0 ? 'text-blue-400 font-bold' : 'text-slate-500' %> truncate italic uppercase tracking-tighter">
                                    <%= f.unread_count > 0 ? 'Incoming Whisper...' : 'Open Circle' %>
                                </p>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="p-10 text-center opacity-20">
                        <i class="fas fa-comment-slash text-2xl mb-2"></i>
                        <p class="text-[9px] font-black uppercase tracking-widest">No connections yet</p>
                    </div>
                <% } %>
            </div>
        </aside>

        <main class="chat-pane flex flex-col bg-slate-950 relative">
            <div id="chatWindow" class="chat-container p-4 gap-1">
                <div class="my-auto text-center">
                    <div class="w-20 h-20 bg-slate-900 rounded-full flex items-center justify-center mx-auto mb-4 border border-white/5">
                        <i class="fas fa-feather-alt text-slate-800 text-2xl"></i>
                    </div>
                    <h2 class="font-black text-slate-700 uppercase text-[10px] tracking-[0.3em]">Select a Soul to Whisper</h2>
                </div>
            </div>

            <div id="inputDock" class="hidden p-3 bg-slate-900/50 backdrop-blur-md border-t border-white/5">
                <% if (user.is_verified) { %>
                    <form id="chatForm" class="flex gap-2 items-center max-w-4xl mx-auto">
                        <input id="msgInput" type="text" autocomplete="off" placeholder="Type a whisper..." 
                            class="flex-1 bg-slate-950 border border-slate-800 rounded-2xl px-5 py-3 text-sm outline-none text-white focus:border-blue-600 transition-all shadow-inner" />
                        <button type="submit" class="bg-blue-600 w-11 h-11 rounded-full text-white flex items-center justify-center shadow-lg shadow-blue-600/20 active:scale-90 transition-transform">
                            <i class="fas fa-paper-plane text-xs"></i>
                        </button>
                    </form>
                <% } else { %>
                    <div class="text-center p-3 text-[10px] text-red-400 font-black uppercase tracking-widest">
                        <i class="fas fa-lock mr-2"></i> Verify email to unlock whispers
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</div>

<script>
    const currentUserId = '<%= user.id %>';
    let currentFriendId = null;
    let lastMessageId = null;

    async function selectFriend(id, name, pic) {
        currentFriendId = id;
        
        // Update UI Selection
        document.querySelectorAll('.friend-item').forEach(el => el.classList.remove('active'));
        document.getElementById(`friend-${id}`).classList.add('active');

        // Pane Transition for Mobile
        document.getElementById('paneContainer').classList.add('show-chat');
        document.getElementById('mobileBack').classList.remove('hidden');
        document.getElementById('navHomeLink').classList.add('hidden');
        document.getElementById('inputDock').classList.remove('hidden');
        document.getElementById('chatActions').classList.remove('hidden');
        
        // Update Header
        const avatarDiv = document.getElementById('activeChatAvatar');
        avatarDiv.classList.remove('hidden');
        avatarDiv.innerHTML = pic && pic !== 'null' && pic !== '' ? `<img src="${pic}" class="w-full h-full object-cover">` : name[0].toUpperCase();
        
        document.getElementById('chatHeaderTitle').innerText = `@${name}`;
        document.getElementById('chatStatus').innerHTML = `<span class="flex items-center gap-1"><span class="typing-dot"></span> Whispering Now</span>`;
        
        await fetchMessages(true);
    }

    function closeChat() {
        document.getElementById('paneContainer').classList.remove('show-chat');
        document.getElementById('mobileBack').classList.add('hidden');
        document.getElementById('navHomeLink').classList.remove('hidden');
        document.getElementById('activeChatAvatar').classList.add('hidden');
        document.getElementById('chatHeaderTitle').innerText = 'Whispers';
        document.getElementById('chatStatus').innerText = 'Village Square';
        currentFriendId = null;
    }

    async function fetchMessages(force = false) {
        if (!currentFriendId) return;
        try {
            const res = await fetch(`/api/chat/${currentFriendId}`);
            const messages = await res.json();
            const chatWindow = document.getElementById('chatWindow');
            
            // Optimization: Only redraw if new messages or read-status change
            const latestM = messages[messages.length - 1];
            if (!force && latestM && latestM.id === lastMessageId && latestM.is_read) return;
            
            chatWindow.innerHTML = '';
            messages.forEach(m => {
                const isMe = m.sender_id == currentUserId;
                const div = document.createElement('div');
                div.className = `bubble ${isMe ? 'bubble-me' : 'bubble-them'}`;
                
                // Read Receipt Logic
                let statusIcon = '';
                if (isMe) {
                    statusIcon = m.is_read 
                        ? '<i class="fas fa-check-double text-blue-200 ml-1"></i>' 
                        : '<i class="fas fa-check opacity-30 ml-1"></i>';
                }

                div.innerHTML = `
                    <div class="font-medium">${m.content}</div>
                    <div class="text-[7px] mt-1 opacity-60 flex items-center justify-end">
                        ${new Date(m.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                        ${statusIcon}
                    </div>
                `;
                chatWindow.appendChild(div);
                lastMessageId = m.id;
            });
            chatWindow.scrollTop = chatWindow.scrollHeight;
        } catch (e) { console.error("Whisper sync error"); }
    }

    document.getElementById('chatForm')?.addEventListener('submit', async e => {
        e.preventDefault();
        const input = document.getElementById('msgInput');
        const content = input.value.trim();
        if (!content || !currentFriendId) return;
        
        input.value = '';
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ receiverId: currentFriendId, content })
        });
        fetchMessages(true);
    });

    // Sync Whispers every 3 seconds
    setInterval(() => { if (currentFriendId) fetchMessages(); }, 3000);
</script>
</body>
</html>