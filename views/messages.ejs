<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover" />
    <title>Whispers | Apugo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');

        body { 
            background-color: #020617; 
            height: 100dvh; 
            width: 100vw;
            display: flex; 
            flex-direction: column; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            overflow: hidden; 
            position: fixed; 
        }
        
        .pane-container { 
            position: relative; 
            display: flex; 
            height: 100%; 
            transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1); 
        }

        @media (max-width: 768px) {
            .pane-container { width: 200vw; }
            .friends-pane, .chat-pane { width: 100vw; height: 100%; }
            .show-chat { transform: translateX(-100vw); }
        }

        @media (min-width: 769px) {
            .pane-container { width: 100%; }
            .friends-pane { width: 350px; border-right: 1px solid rgba(255,255,255,0.05); }
            .chat-pane { flex: 1; }
        }

        .chat-container { 
            flex: 1; 
            overflow-y: auto; 
            display: flex; 
            flex-direction: column; 
            scrollbar-width: none;
            padding: 1rem;
            scroll-behavior: smooth;
        }
        .chat-container::-webkit-scrollbar { display: none; }

        .bubble { 
            max-width: 85%; 
            padding: 10px 14px; 
            font-size: 13px; 
            margin-bottom: 6px; 
            line-height: 1.4; 
            position: relative; 
            word-wrap: break-word;
            animation: bubbleIn 0.2s ease-out;
        }

        @keyframes bubbleIn {
            from { opacity: 0; transform: translateY(5px) scale(0.98); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .bubble-me { 
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            color: white; 
            border-radius: 18px 18px 4px 18px; 
            align-self: flex-end;
        }

        .bubble-them { 
            background: #1e293b; 
            color: #e2e8f0; 
            border-radius: 18px 18px 18px 4px; 
            border: 1px solid rgba(255,255,255,0.05);
            align-self: flex-start;
        }
        
        .friend-item.active { background-color: rgba(37, 99, 235, 0.1); border-right: 3px solid #3b82f6; }
        .glass-nav { 
            background: rgba(15, 23, 42, 0.95); 
            backdrop-filter: blur(12px); 
            border-bottom: 1px solid rgba(255,255,255,0.05);
            height: 60px; 
        }
        
        .typing-dot { width: 3px; height: 3px; background: #3b82f6; border-radius: 50%; animation: blink 1.4s infinite; }
        @keyframes blink { 0%, 100% { opacity: 0.2; } 50% { opacity: 1; } }
    </style>
</head>

<body class="text-slate-200">

<nav class="glass-nav px-4 shrink-0 flex items-center">
    <div class="w-full flex items-center gap-3">
        <button id="mobileBack" class="hidden text-slate-400 py-2 pr-2 hover:text-white" onclick="closeChat()">
            <i class="fas fa-chevron-left text-lg"></i>
        </button>
        
        <a href="/feed" id="navHomeLink" class="text-slate-500 hover:text-white p-2">
            <i class="fas fa-house text-lg"></i>
        </a>

        <div class="flex-1 min-w-0 flex items-center gap-2">
            <div id="activeChatAvatar" class="hidden w-8 h-8 rounded-full overflow-hidden border border-slate-700 bg-slate-800 flex items-center justify-center text-[10px] font-black text-blue-500 uppercase"></div>
            <div class="min-w-0">
                <h1 id="chatHeaderTitle" class="font-black text-blue-500 italic text-xs uppercase tracking-tighter truncate">Whispers</h1>
                <p id="chatStatus" class="text-[8px] text-slate-500 uppercase font-black tracking-[0.15em]">Village Square</p>
            </div>
        </div>

        <div id="chatActions" class="hidden flex items-center gap-1">
            <button onclick="unfriend()" class="text-slate-600 hover:text-orange-500 p-2"><i class="fas fa-user-slash text-sm"></i></button>
            <button onclick="clearChat()" class="text-slate-600 hover:text-red-500 p-2"><i class="fas fa-fire-alt text-sm"></i></button>
        </div>
    </div>
</nav>

<div class="flex-1 overflow-hidden relative">
    <div id="paneContainer" class="pane-container">
        
        <aside class="friends-pane bg-slate-950 flex flex-col h-full">
            <div class="p-4">
                <input type="text" id="globalSearch" placeholder="Find a soul..." class="w-full bg-slate-900 border border-white/5 rounded-xl py-2.5 px-4 text-[11px] outline-none text-white focus:border-blue-600">
            </div>
            
            <div class="flex-1 overflow-y-auto px-2 pb-20 md:pb-4">
                <% if (locals.friends && friends.length > 0) { %>
                    <% friends.forEach(f => { %>
                        <div id="friend-<%= f.id %>" class="friend-item p-3 flex items-center gap-3 cursor-pointer rounded-xl hover:bg-white/5 transition-all group" 
                             onclick="selectFriend('<%= f.id %>', `<%= f.email.split('@')[0] %>`, `<%= f.profile_pic %>`)">
                            
                            <div class="relative shrink-0 w-11 h-11 bg-slate-800 rounded-full flex items-center justify-center border border-slate-700 overflow-hidden">
                                <% if (f.profile_pic) { %>
                                    <img src="<%= f.profile_pic %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <span class="font-black text-blue-500 text-xs"><%= f.email[0].toUpperCase() %></span>
                                <% } %>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-[3px] border-slate-950 rounded-full <%= f.is_online ? 'bg-green-500' : 'bg-slate-600' %>"></span>
                            </div>

                            <div class="flex-1 min-w-0">
                                <div class="flex justify-between items-center mb-0.5">
                                    <span class="text-[11px] font-black block truncate text-slate-200 uppercase group-hover:text-blue-400">@<%= f.email.split('@')[0] %></span>
                                    <% if (f.unread_count > 0) { %>
                                        <span id="unread-<%= f.id %>" class="bg-blue-600 text-[8px] font-black px-1.5 py-0.5 rounded-full"><%= f.unread_count %></span>
                                    <% } %>
                                </div>
                                <p class="text-[9px] text-slate-600 truncate italic uppercase tracking-wider">Tap to Whisper</p>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </aside>

        <main class="chat-pane flex flex-col bg-slate-950 h-full overflow-hidden">
            <div id="chatWindow" class="chat-container">
                <div class="my-auto text-center opacity-20">
                    <i class="fas fa-feather-alt text-4xl mb-3"></i>
                    <p class="text-[10px] font-black uppercase tracking-[0.3em]">Ancient Grounds</p>
                </div>
            </div>

            <div id="inputDock" class="hidden p-3 bg-slate-900/90 backdrop-blur-xl border-t border-white/5 shrink-0">
                <form id="chatForm" class="flex gap-2 items-center">
                    <input id="msgInput" type="text" autocomplete="off" placeholder="Write a whisper..." 
                        class="flex-1 bg-slate-950 border border-slate-800 rounded-2xl px-5 py-3 text-sm outline-none text-white focus:border-blue-600/50" />
                    <button type="submit" class="bg-blue-600 w-11 h-11 rounded-2xl text-white flex items-center justify-center active:scale-90 transition-all">
                        <i class="fas fa-paper-plane text-[10px]"></i>
                    </button>
                </form>
            </div>
        </main>
    </div>
</div>

<script>
    const currentUserId = '<%= user.id %>';
    let currentFriendId = null;
    let lastMessageCount = 0; // State tracker to prevent flicker

    function selectFriend(id, name, pic) {
        if (currentFriendId === id) return;
        currentFriendId = id;
        lastMessageCount = 0; // Reset for new friend
        
        document.querySelectorAll('.friend-item').forEach(el => el.classList.remove('active'));
        const item = document.getElementById(`friend-${id}`);
        if(item) item.classList.add('active');

        document.getElementById('paneContainer').classList.add('show-chat');
        document.getElementById('mobileBack').classList.remove('hidden');
        document.getElementById('navHomeLink').classList.add('hidden');
        document.getElementById('inputDock').classList.remove('hidden');
        document.getElementById('chatActions').classList.remove('hidden');
        
        const avatarDiv = document.getElementById('activeChatAvatar');
        avatarDiv.classList.remove('hidden');
        avatarDiv.innerHTML = pic && pic !== 'null' ? `<img src="${pic}" class="w-full h-full object-cover">` : `<span>${name[0].toUpperCase()}</span>`;
        
        document.getElementById('chatHeaderTitle').innerText = `@${name}`;
        document.getElementById('chatStatus').innerHTML = `<span class="flex items-center gap-1"><span class="typing-dot"></span> Whispering</span>`;
        
        document.getElementById('chatWindow').innerHTML = ''; // Clear once for new friend
        fetchMessages();
    }

    async function fetchMessages() {
        if (!currentFriendId) return;
        try {
            const res = await fetch(`/api/chat/${currentFriendId}`);
            const messages = await res.json();
            const chatWindow = document.getElementById('chatWindow');
            
            // Only update DOM if message count changed (prevents flickering)
            if (messages.length === lastMessageCount) return;

            chatWindow.innerHTML = '';
            messages.forEach(m => {
                const isMe = String(m.sender_id) === String(currentUserId);
                const div = document.createElement('div');
                div.className = `bubble ${isMe ? 'bubble-me' : 'bubble-them'}`;
                div.innerHTML = `
                    <div>${m.content || m.message}</div>
                    <div class="text-[7px] mt-1 opacity-50 flex items-center justify-end font-black uppercase">
                        ${new Date(m.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                    </div>
                `;
                chatWindow.appendChild(div);
            });
            
            lastMessageCount = messages.length;
            chatWindow.scrollTop = chatWindow.scrollHeight;
        } catch (e) { console.error("Sync error"); }
    }

    document.getElementById('chatForm')?.addEventListener('submit', async e => {
        e.preventDefault();
        const input = document.getElementById('msgInput');
        const content = input.value.trim();
        if (!content || !currentFriendId) return;
        
        input.value = '';
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ receiverId: currentFriendId, content })
        });
        fetchMessages(); // Update immediately after sending
    });

    function closeChat() {
        document.getElementById('paneContainer').classList.remove('show-chat');
        document.getElementById('mobileBack').classList.add('hidden');
        document.getElementById('navHomeLink').classList.remove('hidden');
        currentFriendId = null;
    }

    setInterval(() => { if (currentFriendId) fetchMessages(); }, 3000);
</script>
</body>
</html>