<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover" />
    <title>Whispers | Apugo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');

        body { 
            background-color: #020617; 
            height: 100dvh; 
            width: 100vw;
            display: flex; 
            flex-direction: column; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            overflow: hidden; 
            position: fixed; 
        }
        
        .pane-container { 
            position: relative; 
            display: flex; 
            height: 100%; 
            transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1); 
        }

        @media (max-width: 768px) {
            .pane-container { width: 200vw; }
            .friends-pane, .chat-pane { width: 100vw; height: 100%; }
            .show-chat { transform: translateX(-100vw); }
        }

        @media (min-width: 769px) {
            .pane-container { width: 100%; }
            .friends-pane { width: 350px; border-right: 1px solid rgba(255,255,255,0.05); }
            .chat-pane { flex: 1; }
        }

        .chat-container { 
            flex: 1; 
            overflow-y: auto; 
            display: flex; 
            flex-direction: column; 
            scrollbar-width: none;
            padding: 1.5rem;
            scroll-behavior: smooth;
        }
        .chat-container::-webkit-scrollbar { display: none; }

        .bubble { 
            max-width: 75%; 
            padding: 12px 16px; 
            font-size: 13px; 
            margin-bottom: 8px; 
            line-height: 1.5; 
            position: relative; 
            word-wrap: break-word;
            animation: bubbleIn 0.25s cubic-bezier(0, 1, 0, 1);
        }

        @keyframes bubbleIn {
            from { opacity: 0; transform: translateY(10px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .bubble-me { 
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            color: white; 
            border-radius: 20px 20px 4px 20px; 
            align-self: flex-end;
            box-shadow: 0 4px 15px -5px rgba(37, 99, 235, 0.4);
        }

        .bubble-them { 
            background: #1e293b; 
            color: #e2e8f0; 
            border-radius: 20px 20px 20px 4px; 
            border: 1px solid rgba(255,255,255,0.05);
            align-self: flex-start;
        }
        
        .friend-item.active { background-color: rgba(37, 99, 235, 0.1); border-right: 3px solid #3b82f6; }
        
        .glass-nav { 
            background: rgba(15, 23, 42, 0.95); 
            backdrop-filter: blur(12px); 
            border-bottom: 1px solid rgba(255,255,255,0.05);
            height: 70px; 
        }
        
        .typing-dot { width: 4px; height: 4px; background: #3b82f6; border-radius: 50%; animation: blink 1.4s infinite; }
        @keyframes blink { 0%, 100% { opacity: 0.2; } 50% { opacity: 1; } }

        .initial-avatar {
            background: linear-gradient(135deg, #3b82f6, #1e40af);
            color: white;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            text-transform: uppercase;
        }
    </style>
</head>

<body class="text-slate-200">

<nav class="glass-nav px-4 shrink-0 flex items-center">
    <div class="w-full flex items-center justify-between">
        <div class="flex items-center min-w-[48px]">
            <button id="mobileBack" class="hidden text-slate-400 p-2 hover:text-white transition-colors" onclick="closeChat()">
                <i class="fas fa-chevron-left text-lg"></i>
            </button>
            <a href="/feed" id="navHomeLink" class="text-slate-500 hover:text-white p-2">
                <i class="fas fa-house text-lg"></i>
            </a>
        </div>

        <div class="flex-1 flex items-center justify-center gap-2 px-2 overflow-hidden">
            <div id="activeChatAvatar" class="hidden shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-xl md:rounded-2xl overflow-hidden border border-slate-700 flex items-center justify-center text-[12px] font-black text-white uppercase initial-avatar"></div>
            <div class="min-w-0 text-center md:text-left">
                <h1 id="chatHeaderTitle" class="font-black text-blue-500 italic text-[13px] md:text-sm uppercase tracking-tighter truncate">Whispers</h1>
                <p id="chatStatus" class="text-[7px] md:text-[8px] text-slate-500 uppercase font-black tracking-[0.2em]">Village Square</p>
            </div>
        </div>

        <div id="chatActions" class="invisible flex items-center justify-end min-w-[48px]">
            <form id="unfriendForm" method="POST" class="m-0">
                <button type="submit" onclick="return confirm('Sever this kinship?')" class="text-slate-600 hover:text-orange-500 p-2 transition-colors">
                    <i class="fas fa-user-slash text-sm"></i>
                </button>
            </form>
        </div>
    </div>
</nav>

<div class="flex-1 overflow-hidden relative">
    <div id="paneContainer" class="pane-container">
        
        <aside class="friends-pane bg-slate-950 flex flex-col h-full">
            <div class="p-4">
                <input type="text" id="globalSearch" onkeyup="searchSouls()" placeholder="Find a soul..." 
                    class="w-full bg-slate-900 border border-white/5 rounded-xl py-3 px-5 text-[11px] outline-none text-white focus:border-blue-600 transition-all">
            </div>
            
            <div id="friendsList" class="flex-1 overflow-y-auto px-2 pb-24 md:pb-4 no-scrollbar">
                <% if (locals.friends && friends.length > 0) { %>
                    <% friends.forEach(f => { %>
                        <% const displayUsername = f.username || f.email.split('@')[0]; %>
                        <div id="friend-<%= f.id %>" class="friend-item p-4 flex items-center gap-4 cursor-pointer rounded-2xl hover:bg-white/5 transition-all group" 
                             onclick="selectFriend('<%= f.id %>', `<%= displayUsername %>`, `<%= f.profile_pic %>`)">
                            
                            <div class="relative shrink-0 w-12 h-12 rounded-2xl flex items-center justify-center border border-slate-700 overflow-hidden shadow-lg initial-avatar">
                                <% if (f.profile_pic && f.profile_pic !== 'null') { %>
                                    <img src="<%= f.profile_pic %>" class="w-full h-full object-cover">
                                <% } else { %>
                                    <span class="text-sm"><%= displayUsername[0] %></span>
                                <% } %>
                                <span class="absolute -bottom-1 -right-1 w-4 h-4 border-[3px] border-slate-950 rounded-full <%= f.is_online ? 'bg-green-500' : 'bg-slate-700' %>"></span>
                            </div>

                            <div class="flex-1 min-w-0">
                                <div class="flex justify-between items-center mb-0.5">
                                    <span class="text-[12px] font-black block truncate text-slate-200 uppercase group-hover:text-blue-400 transition-colors">@<%= displayUsername %></span>
                                    <% if (f.unread_count > 0) { %>
                                        <span id="unread-<%= f.id %>" class="bg-blue-600 text-[9px] font-black px-2 py-0.5 rounded-full shadow-lg shadow-blue-600/20"><%= f.unread_count %></span>
                                    <% } %>
                                </div>
                                <p class="text-[10px] text-slate-600 truncate italic uppercase tracking-widest font-bold">Tap to Whisper</p>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="p-8 text-center">
                        <p class="text-[10px] font-black text-slate-700 uppercase tracking-widest leading-loose">No kin found. Visit the Square to meet neighbors.</p>
                    </div>
                <% } %>
            </div>
        </aside>

        <main class="chat-pane flex flex-col bg-slate-950 h-full overflow-hidden">
            <div id="chatWindow" class="chat-container">
                <div id="emptyState" class="my-auto text-center opacity-10">
                    <i class="fas fa-feather-alt text-6xl mb-4 text-blue-500"></i>
                    <p class="text-[12px] font-black uppercase tracking-[0.5em]">Ancient Grounds</p>
                </div>
            </div>

            <div id="inputDock" class="hidden p-4 bg-slate-900/50 backdrop-blur-2xl border-t border-white/5 shrink-0">
                <form id="chatForm" class="flex gap-3 items-center max-w-4xl mx-auto">
                    <input id="msgInput" type="text" autocomplete="off" placeholder="Write a whisper..." 
                        class="flex-1 bg-slate-950 border border-slate-800 rounded-2xl px-6 py-4 text-sm outline-none text-white focus:border-blue-600/50 transition-all placeholder-slate-700" />
                    <button type="submit" class="bg-blue-600 w-14 h-14 rounded-2xl text-white flex items-center justify-center active:scale-90 transition-all shadow-xl shadow-blue-600/10">
                        <i class="fas fa-paper-plane text-sm"></i>
                    </button>
                </form>
            </div>
        </main>
    </div>
</div>

<script>
    const currentUserId = '<%= user.id %>';
    let currentFriendId = null;
    let lastMessageCount = 0;

    function selectFriend(id, name, pic) {
        if (currentFriendId === id) return;
        currentFriendId = id;
        lastMessageCount = 0; 
        
        document.querySelectorAll('.friend-item').forEach(el => el.classList.remove('active'));
        const item = document.getElementById(`friend-${id}`);
        if(item) item.classList.add('active');

        // UI Transitions
        document.getElementById('paneContainer').classList.add('show-chat');
        document.getElementById('mobileBack').classList.remove('hidden');
        document.getElementById('navHomeLink').classList.add('hidden');
        document.getElementById('inputDock').classList.remove('hidden');
        
        // Ensure Action Button Visibility
        const actions = document.getElementById('chatActions');
        actions.classList.remove('invisible');
        actions.classList.add('visible');
        
        // Header Avatar Logic
        const avatarDiv = document.getElementById('activeChatAvatar');
        avatarDiv.classList.remove('hidden');
        if (pic && pic !== 'null' && pic !== '') {
            avatarDiv.innerHTML = `<img src="${pic}" class="w-full h-full object-cover">`;
        } else {
            avatarDiv.innerHTML = `<span>${name[0].toUpperCase()}</span>`;
        }
        
        document.getElementById('chatHeaderTitle').innerText = `@${name}`;
        document.getElementById('chatStatus').innerHTML = `<span class="flex items-center gap-1"><span class="typing-dot"></span> Whispering</span>`;
        
        document.getElementById('unfriendForm').action = `/friends/unfriend/${id}`;
        document.getElementById('chatWindow').innerHTML = '<div class="flex-1 flex items-center justify-center"><i class="fas fa-circle-notch animate-spin text-blue-600"></i></div>';
        
        fetchMessages();
    }

    async function fetchMessages() {
        if (!currentFriendId) return;
        try {
            const res = await fetch(`/api/chat/${currentFriendId}`);
            const messages = await res.json();
            const chatWindow = document.getElementById('chatWindow');
            
            // Only re-render if message count changed to save performance
            if (messages.length === lastMessageCount) return;

            chatWindow.innerHTML = '';
            messages.forEach(m => {
                const isMe = String(m.sender_id) === String(currentUserId);
                const div = document.createElement('div');
                div.className = `bubble ${isMe ? 'bubble-me' : 'bubble-them'}`;
                div.innerHTML = `
                    <div class="font-medium">${m.content || m.message}</div>
                    <div class="text-[8px] mt-1.5 opacity-40 flex items-center justify-end font-black uppercase tracking-tighter">
                        ${new Date(m.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                    </div>
                `;
                chatWindow.appendChild(div);
            });
            
            lastMessageCount = messages.length;
            chatWindow.scrollTo({ top: chatWindow.scrollHeight, behavior: 'smooth' });
        } catch (e) { console.error("Whisper sync failed"); }
    }

    document.getElementById('chatForm')?.addEventListener('submit', async e => {
        e.preventDefault();
        const input = document.getElementById('msgInput');
        const content = input.value.trim();
        if (!content || !currentFriendId) return;
        
        input.value = '';
        try {
            await fetch('/api/chat/send', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ receiverId: currentFriendId, content })
            });
            fetchMessages(); 
        } catch(err) { console.error("Failed to send"); }
    });

    function searchSouls() {
        const input = document.getElementById('globalSearch').value.toUpperCase();
        const items = document.querySelectorAll('.friend-item');
        items.forEach(item => {
            const text = item.innerText.toUpperCase();
            item.style.display = text.includes(input) ? "flex" : "none";
        });
    }

    function closeChat() {
        document.getElementById('paneContainer').classList.remove('show-chat');
        document.getElementById('mobileBack').classList.add('hidden');
        document.getElementById('navHomeLink').classList.remove('hidden');
        
        const actions = document.getElementById('chatActions');
        actions.classList.add('invisible');
        actions.classList.remove('visible');

        document.getElementById('activeChatAvatar').classList.add('hidden');
        document.getElementById('chatHeaderTitle').innerText = "Whispers";
        document.getElementById('chatStatus').innerText = "Village Square";
        
        currentFriendId = null;
        lastMessageCount = 0;
    }

    // Auto-open logic
    window.addEventListener('load', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const userId = urlParams.get('userId');
        if (userId) {
            const friendEl = document.getElementById(`friend-${userId}`);
            if (friendEl) friendEl.click();
        }
    });

    setInterval(() => { if (currentFriendId) fetchMessages(); }, 3000);
</script>
</body>
</html>