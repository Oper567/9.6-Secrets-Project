<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Apugo | Messages</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body {
      background-color: #020617;
      height: 100vh;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    .chat-container {
      flex: 1;
      overflow-y: auto;
      scroll-behavior: smooth;
    }

    .bubble {
      max-width: 85%;
      padding: 10px 14px;
      font-size: 13px;
      font-weight: 500;
      margin-bottom: 8px;
      word-wrap: break-word;
    }

    .bubble-me {
      background: #2563eb;
      color: white;
      align-self: flex-end;
      border-radius: 18px 18px 4px 18px;
    }

    .bubble-them {
      background: #1e293b;
      color: #cbd5e1;
      align-self: flex-start;
      border-radius: 18px 18px 18px 4px;
    }

    .friend-item.active {
      background-color: #0f172a;
      border-left: 4px solid #2563eb;
    }

    #inputDock {
      position: sticky;
      bottom: 0;
    }
  </style>
</head>

<body class="text-slate-200">

<!-- NAV -->
<nav class="bg-slate-900 border-b border-slate-800 p-3 flex items-center gap-3">
  <a href="/feed" class="text-slate-400 hover:text-white">‚Üê</a>
  <div>
    <h1 class="font-black text-blue-500 italic text-lg">MESSAGES</h1>
    <p id="chatStatus" class="text-[9px] text-slate-500 uppercase font-black tracking-widest">
      Village Square
    </p>
  </div>
</nav>

<div class="flex flex-1 overflow-hidden">

  <!-- FRIEND LIST -->
  <aside id="friendsList"
    class="w-20 md:w-64 bg-slate-950 border-r border-slate-800 overflow-y-auto shrink-0">

    <% friends.forEach(f => { %>
      <div
        id="friend-<%= f.id %>"
        class="friend-item p-3 md:p-4 flex flex-col md:flex-row items-center gap-3 cursor-pointer border-b border-slate-900/50 hover:bg-slate-900"
        data-id="<%= f.id %>"
        data-name="<%= f.email.split('@')[0] %>"
      >
        <div class="w-10 h-10 bg-gradient-to-tr from-blue-700 to-blue-500 rounded-full flex items-center justify-center font-bold uppercase text-sm">
          <%= f.email[0] %>
        </div>
        <span class="hidden md:block text-xs font-bold truncate">
          @<%= f.email.split('@')[0] %>
        </span>
      </div>
    <% }) %>

  </aside>

  <!-- CHAT -->
  <main class="flex-1 flex flex-col bg-slate-950">

    <div id="chatWindow" class="chat-container p-4 flex flex-col">
      <div id="emptyState" class="mt-20 text-center">
        <div class="text-2xl mb-4">üå¥</div>
        <h2 class="font-black text-slate-400">Select a villager to chat</h2>
        <p class="text-xs text-slate-600">Chat is private between you two.</p>
      </div>
    </div>

    <!-- INPUT -->
    <div id="inputDock" class="hidden p-3 bg-slate-900/50 border-t border-slate-800">
      <form id="chatForm" class="flex gap-2 max-w-4xl mx-auto">
        <input
          id="msgInput"
          type="text"
          placeholder="Write something..."
          class="flex-1 bg-slate-950 border border-slate-800 rounded-2xl px-4 py-3 text-sm outline-none focus:border-blue-600"
        />
        <button
          class="bg-blue-600 hover:bg-blue-500 w-12 h-12 rounded-2xl text-white"
        >
          ‚û§
        </button>
      </form>
    </div>

  </main>
</div>

<script>
/* =============================
   STATE
============================= */
const currentUserId = '<%= user.id %>';
const targetUserFromFeed = '<%= targetUser %>';
let currentFriendId = null;
let lastMessageId = null;

/* =============================
   FRIEND CLICK (EVENT DELEGATION)
============================= */
document.getElementById('friendsList').addEventListener('click', e => {
  const item = e.target.closest('.friend-item');
  if (!item) return;

  const id = item.dataset.id;
  const name = item.dataset.name;

  if (currentFriendId === id) return;

  selectFriend(id, name);
});

/* =============================
   SELECT FRIEND
============================= */
async function selectFriend(id, name) {
  currentFriendId = id;
  lastMessageId = null;

  document.querySelectorAll('.friend-item').forEach(el =>
    el.classList.remove('active')
  );
  document.getElementById(`friend-${id}`)?.classList.add('active');

  document.getElementById('emptyState')?.remove();
  document.getElementById('inputDock').classList.remove('hidden');
  document.getElementById('chatStatus').innerText = `Chatting with @${name}`;

  document.getElementById('chatWindow').innerHTML =
    '<p class="text-xs text-slate-600 text-center mt-6">Loading messages...</p>';

  await fetchMessages(true);
}

/* =============================
   FETCH MESSAGES
============================= */
async function fetchMessages(force = false) {
  if (!currentFriendId) return;

  const res = await fetch(`/api/chat/${currentFriendId}`);
  const messages = await res.json();

  if (!messages.length) return;

  const last = messages[messages.length - 1];
  if (!force && last.id === lastMessageId) return;

  const chat = document.getElementById('chatWindow');
  chat.innerHTML = '';

  messages.forEach(m => {
    const div = document.createElement('div');
    div.className = `bubble ${m.sender_id == currentUserId ? 'bubble-me' : 'bubble-them'}`;
    div.innerText = m.content;
    chat.appendChild(div);
    lastMessageId = m.id;
  });

  chat.scrollTop = chat.scrollHeight;
}

/* =============================
   SEND MESSAGE
============================= */
document.getElementById('chatForm').addEventListener('submit', async e => {
  e.preventDefault();

  const input = document.getElementById('msgInput');
  const content = input.value.trim();
  if (!content || !currentFriendId) return;

  input.value = '';

  await fetch('/api/chat/send', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ receiverId: currentFriendId, content })
  });

  fetchMessages(true);
});

/* =============================
   AUTO OPEN FROM FEED
============================= */
window.addEventListener('load', () => {
  if (targetUserFromFeed && targetUserFromFeed !== 'null') {
    document.getElementById(`friend-${targetUserFromFeed}`)?.click();
  }
});

/* =============================
   SAFE POLLING
============================= */
setInterval(() => {
  if (currentFriendId) fetchMessages();
}, 3000);
</script>

</body>
</html>
