<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>My Profile | Apugo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background: #020617; font-family: 'Inter', sans-serif; -webkit-tap-highlight-color: transparent; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(20px); }
        
        /* Smooth transitions for the grid */
        .post-grid-item { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        
        /* Hide scrollbar but allow scrolling */
        ::-webkit-scrollbar { width: 0px; background: transparent; }

        /* Mobile Menu Animation */
        #nav-dropdown:not(.hidden) { animation: slideDown 0.3s ease-out forwards; }
        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="text-slate-200 pb-32">

    <nav class="glass-nav border-b border-slate-800 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <h1 class="text-xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
                
                <div class="flex items-center gap-4">
                    <button id="menu-btn" class="md:hidden flex flex-col gap-1.5 px-2 py-2 border border-slate-800 rounded-lg bg-slate-900">
                        <span class="w-5 h-0.5 bg-slate-300"></span>
                        <span class="w-5 h-0.5 bg-slate-300"></span>
                    </button>
                    <a href="/logout" class="hidden md:block text-[10px] font-black text-slate-500 uppercase border border-slate-800 px-3 py-1 rounded-full hover:bg-red-900/20 hover:text-red-500 transition-all">Exit</a>
                </div>
            </div>

            <div id="nav-dropdown" class="hidden md:flex flex-col md:flex-row items-center gap-4 mt-4">
                <div class="flex flex-col md:flex-row w-full md:w-auto md:gap-4 text-[10px] font-black uppercase tracking-widest bg-slate-950 md:bg-transparent rounded-xl border border-slate-800 md:border-0 overflow-hidden shadow-2xl">
                    <a href="/feed" class="px-5 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:bg-slate-900 transition">Feed</a>
                    <a href="/discover" class="px-5 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:bg-slate-900 transition">Discover</a>
                    <a href="/messages" class="px-5 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:bg-slate-900 transition">Whispers</a>
                    <a href="/profile" class="px-5 py-4 text-blue-500 bg-slate-900 md:bg-transparent transition">Profile</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto p-6">
        <div class="bg-slate-900/40 border border-slate-800 p-8 rounded-[2.5rem] text-center mb-10 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-blue-600/5 to-transparent"></div>
            
            <div class="relative">
                <div class="w-24 h-24 bg-gradient-to-tr from-blue-600 to-indigo-600 rounded-full mx-auto mb-4 flex items-center justify-center text-3xl font-black shadow-2xl border-4 border-slate-950 uppercase">
                    <%= user.email[0] %>
                </div>
                <h1 class="text-2xl font-black text-white tracking-tight">@<%= user.email.split('@')[0] %></h1>
                <div class="flex items-center justify-center gap-2 mt-1">
                    <p class="text-blue-500 text-[10px] font-black uppercase tracking-widest"><%= user.role || 'Villager' %></p>
                    <% if (user.is_verified) { %><span class="text-blue-500 text-xs">‚úî</span><% } %>
                </div>
                
                <div class="flex justify-center gap-10 mt-8">
                    <div class="text-center">
                        <p class="text-xl font-black text-white"><%= posts.length %></p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-tighter">Secrets</p>
                    </div>
                    <div class="text-center border-x border-slate-800 px-10">
                        <p class="text-xl font-black text-white">
                        <%= (typeof friendCount !== 'undefined') ? friendCount : 0 %>
                        </p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-tighter">Kinship</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl font-black text-white"><%= unreadCount %></p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-tighter">Alerts</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-grid-item aspect-square bg-slate-900 rounded-2xl overflow-hidden border border-slate-800 group relative shadow-lg">
                        <% if (post.image_url) { %>
                            <% if (post.media_type === 'video') { %>
                                <video src="<%= post.image_url %>" class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all"></video>
                                <div class="absolute top-2 right-2 text-white/50 text-xs">üìπ</div>
                            <% } else { %>
                                <img src="<%= post.image_url %>" class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all">
                            <% } %>
                        <% } else { %>
                            <div class="w-full h-full flex items-center justify-center p-4 text-center">
                                <p class="text-[10px] text-slate-500 italic line-clamp-4">"<%= post.description %>"</p>
                            </div>
                        <% } %>

                        <div class="absolute inset-0 bg-slate-950/80 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center gap-3">
                            <div class="flex gap-4 text-white text-xs font-black">
                                <span>‚ù§Ô∏è <%= post.likes_count || 0 %></span>
                                <span>üí¨ <%= post.comments_count || 0 %></span>
                            </div>
                            <form action="/event/<%= post.id %>/delete" method="POST" onsubmit="return confirm('Erase this secret forever?')">
                                <button class="bg-red-600 hover:bg-red-500 text-white text-[9px] font-black px-4 py-2 rounded-xl uppercase tracking-widest transition-transform active:scale-90">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-20 text-center opacity-30">
                    <p class="text-4xl mb-4">üì≠</p>
                    <p class="text-[10px] font-black uppercase tracking-widest">No secrets shared yet</p>
                </div>
            <% } %>
        </div>
    </div>

    <nav class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/80 backdrop-blur-xl border border-white/10 px-8 py-4 rounded-full flex gap-10 shadow-2xl z-[60]">
        <a href="/feed" class="text-slate-400 hover:text-white transition-all hover:scale-125">üè†</a>
        <a href="/discover" class="text-slate-400 hover:text-white transition-all hover:scale-125">üîç</a>
        <a href="/profile" class="text-blue-500 scale-125">üë§</a>
    </nav>

    <script>
        // MOBILE MENU TOGGLE
        const menuBtn = document.getElementById('menu-btn');
        const navDropdown = document.getElementById('nav-dropdown');

        menuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            navDropdown.classList.toggle('hidden');
            navDropdown.classList.toggle('flex');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!navDropdown.classList.contains('hidden') && !navDropdown.contains(e.target) && !menuBtn.contains(e.target)) {
                navDropdown.classList.add('hidden');
                navDropdown.classList.remove('flex');
            }
        });
    </script>
</body>
</html>