<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>My Profile | Apugo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { background: #020617; font-family: 'Inter', sans-serif; -webkit-tap-highlight-color: transparent; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(20px); }
        .post-grid-item { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        ::-webkit-scrollbar { width: 0px; background: transparent; }

        /* Animation for the profile header */
        .profile-card { animation: slideUp 0.6s ease-out; }
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Video/Image Overlay Styles */
        .hover-overlay { background: rgba(37, 99, 235, 0.85); backdrop-filter: blur(4px); }
    </style>
</head>
<body class="text-slate-200 pb-32">

    <nav class="glass-nav border-b border-slate-800 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
            <h1 class="text-xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <div class="flex items-center gap-4">
                <a href="/notifications" class="relative p-2 text-slate-400 hover:text-white transition">
                    <i class="fas fa-bell"></i>
                    <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                        <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-blue-500 rounded-full border-2 border-slate-950 animate-pulse"></span>
                    <% } %>
                </a>
                <button id="menu-btn" class="md:hidden flex flex-col gap-1.5 px-2 py-2 border border-slate-800 rounded-lg bg-slate-900">
                    <span class="w-5 h-0.5 bg-slate-300"></span>
                    <span class="w-5 h-0.5 bg-slate-300"></span>
                </button>
                <a href="/logout" class="hidden md:block text-[10px] font-black text-slate-500 uppercase border border-slate-800 px-3 py-1 rounded-full hover:bg-red-900/20 hover:text-red-500 transition-all">Exit</a>
            </div>
        </div>

        <div id="nav-dropdown" class="hidden flex-col items-center gap-2 p-4 bg-slate-950 border-b border-slate-800">
            <a href="/feed" class="w-full text-center py-3 text-[10px] font-black uppercase tracking-widest text-slate-400">Feed</a>
            <a href="/discover" class="w-full text-center py-3 text-[10px] font-black uppercase tracking-widest text-slate-400">Discover</a>
            <a href="/messages" class="w-full text-center py-3 text-[10px] font-black uppercase tracking-widest text-slate-400">Whispers</a>
            <a href="/logout" class="w-full text-center py-3 text-[10px] font-black uppercase tracking-widest text-red-500 border-t border-slate-900">Log Out</a>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto p-6">
        
        <div class="profile-card bg-slate-900/40 border border-slate-800 p-8 rounded-[3rem] text-center mb-10 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-blue-600/10 to-transparent"></div>
            
            <div class="relative">
                <div class="w-24 h-24 bg-gradient-to-tr from-blue-600 to-indigo-600 rounded-full mx-auto mb-4 flex items-center justify-center text-3xl font-black shadow-2xl border-4 border-slate-950 uppercase ring-4 ring-blue-600/5">
                    <%= user.email ? user.email[0] : 'V' %>
                </div>

                <h1 class="text-2xl font-black text-white tracking-tight">@<%= user.email ? user.email.split('@')[0] : 'Villager' %></h1>
                <div class="flex items-center justify-center gap-2 mt-2">
                    <p class="text-blue-500 text-[10px] font-black uppercase tracking-[0.2em]"><%= user.role || 'Villager' %></p>
                    <% if (user.is_verified) { %>
                        <i class="fas fa-check-circle text-blue-500 text-xs"></i>
                    <% } %>
                </div>
                
                <div class="flex justify-center gap-8 md:gap-12 mt-10">
                    <div class="text-center">
                        <p class="text-xl font-black text-white"><%= (typeof posts !== 'undefined') ? posts.length : 0 %></p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-widest">Secrets</p>
                    </div>
                    
                    <div class="h-8 w-[1px] bg-slate-800 self-center"></div>

                    <div class="text-center">
                        <p class="text-xl font-black text-white">
                            <%= (typeof friendCount !== 'undefined') ? friendCount : 0 %>
                        </p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-widest">Kinship</p>
                    </div>

                    <div class="h-8 w-[1px] bg-slate-800 self-center"></div>

                    <div class="text-center">
                        <p class="text-xl font-black text-white">
                            <%= (typeof unreadCount !== 'undefined') ? unreadCount : 0 %>
                        </p>
                        <p class="text-[9px] text-slate-500 uppercase font-black tracking-widest">Alerts</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
            <% if (typeof posts !== 'undefined' && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-grid-item aspect-square bg-slate-900 rounded-[2rem] overflow-hidden border border-slate-800 group relative shadow-lg">
                        <% if (post.image_url) { %>
                            <% if (post.media_type === 'video') { %>
                                <video src="<%= post.image_url %>" class="w-full h-full object-cover opacity-70 group-hover:opacity-100 transition-all" muted loop playsinline></video>
                                <div class="absolute top-3 right-3 text-white/40 group-hover:hidden"><i class="fas fa-play text-[10px]"></i></div>
                            <% } else { %>
                                <img src="<%= post.image_url %>" class="w-full h-full object-cover opacity-70 group-hover:opacity-100 transition-all" loading="lazy">
                            <% } %>
                        <% } else { %>
                            <div class="w-full h-full flex items-center justify-center p-5 text-center bg-slate-950/50">
                                <p class="text-[9px] text-slate-500 italic line-clamp-4">"<%= post.description %>"</p>
                            </div>
                        <% } %>

                        <div class="absolute inset-0 hover-overlay opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col items-center justify-center gap-3">
                            <div class="flex gap-4 text-white text-xs font-black">
                                <span><i class="fas fa-heart"></i> <%= post.likes_count || 0 %></span>
                                <span><i class="fas fa-comment"></i> <%= post.comments_count || 0 %></span>
                            </div>
                            <form action="/event/<%= post.id %>/delete" method="POST" onsubmit="return confirm('Erase this secret from the village history?')">
                                <button type="submit" class="bg-white text-blue-600 text-[9px] font-black px-4 py-2 rounded-full uppercase tracking-widest transition active:scale-90">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-20 text-center opacity-30 border-2 border-dashed border-slate-800 rounded-[3rem]">
                    <div class="text-4xl mb-3">üèÆ</div>
                    <p class="text-[10px] font-black uppercase tracking-[0.3em]">The scroll is empty</p>
                </div>
            <% } %>
        </div>
    </div>

    <nav class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/80 backdrop-blur-xl border border-white/10 px-8 py-4 rounded-full flex gap-10 shadow-2xl z-[60]">
        <a href="/feed" class="text-slate-400 hover:text-white transition-all hover:scale-125"><i class="fas fa-home"></i></a>
        <a href="/discover" class="text-slate-400 hover:text-white transition-all hover:scale-125"><i class="fas fa-search"></i></a>
        <a href="/messages" class="text-slate-400 hover:text-white transition-all hover:scale-125"><i class="fas fa-comment-dots"></i></a>
        <a href="/profile" class="text-blue-500 scale-125"><i class="fas fa-user"></i></a>
    </nav>

    <script>
        // 1. Mobile Menu Toggle
        const menuBtn = document.getElementById('menu-btn');
        const navDropdown = document.getElementById('nav-dropdown');
        if (menuBtn) {
            menuBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                navDropdown.classList.toggle('hidden');
                navDropdown.classList.toggle('flex');
            });
        }

        // 2. Video Hover Logic
        document.querySelectorAll('.post-grid-item video').forEach(video => {
            const container = video.closest('.post-grid-item');
            container.addEventListener('mouseenter', () => video.play().catch(() => {}));
            container.addEventListener('mouseleave', () => {
                video.pause();
                video.currentTime = 0;
            });
        });

        // 3. Form Loading Feedback
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function() {
                const btn = this.querySelector('button[type="submit"]');
                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner animate-spin"></i>';
                    btn.classList.add('opacity-50');
                }
            });
        });

        // 4. Click outside to close dropdown
        document.addEventListener('click', () => {
            if (navDropdown && !navDropdown.classList.contains('hidden')) {
                navDropdown.classList.add('hidden');
                navDropdown.classList.remove('flex');
            }
        });
    </script>
</body>
</html>