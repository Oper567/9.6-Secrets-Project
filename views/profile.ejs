<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <title>My Hut | Apugo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        body { 
            background: #020617; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            -webkit-tap-highlight-color: transparent; 
        }
        .glass-nav { 
            background: rgba(15, 23, 42, 0.85); 
            backdrop-filter: blur(20px); 
            -webkit-backdrop-filter: blur(20px);
        }
        
        .profile-card { 
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1); 
        }
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .post-grid-item { transition: all 0.3s ease; }
        .hover-overlay { 
            background: linear-gradient(to top, rgba(2, 6, 23, 0.95), transparent); 
        }

        ::-webkit-scrollbar { width: 0px; }
    </style>
</head>
<body class="text-slate-200 pb-24 md:pb-32">

    <nav class="glass-nav border-b border-white/5 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
            <h1 class="text-xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            <div class="flex items-center gap-2">
                <a href="/notifications" class="relative p-2 text-slate-400">
                    <i class="fas fa-bell"></i>
                    <% if (locals.unreadCount && unreadCount > 0) { %>
                        <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-blue-500 rounded-full border-2 border-slate-950"></span>
                    <% } %>
                </a>
                <a href="/logout" class="text-[8px] font-black text-slate-500 uppercase border border-slate-800 px-3 py-1.5 rounded-full hover:text-red-500 transition-all">Exit</a>
            </div>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto px-4 md:px-6 mt-4 lg:mt-8">
        
        <div class="profile-card bg-slate-900/30 border border-white/5 p-6 md:p-12 rounded-[2.5rem] md:rounded-[3.5rem] text-center mb-8 relative overflow-hidden shadow-2xl">
            <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_top,rgba(59,130,246,0.06),transparent)]"></div>
            
            <div class="relative">
                <div class="w-20 h-20 md:w-28 md:h-28 bg-gradient-to-tr from-blue-600 to-indigo-700 rounded-full mx-auto mb-4 md:mb-6 flex items-center justify-center text-3xl md:text-4xl font-black shadow-2xl border-4 border-slate-950 uppercase ring-4 md:ring-8 ring-white/5">
                    <%= user.email ? user.email[0] : 'V' %>
                </div>

                <div class="space-y-1">
                    <h1 class="text-xl md:text-3xl font-black text-white tracking-tighter">@<%= user.email ? user.email.split('@')[0] : 'Villager' %></h1>
                    <div class="flex items-center justify-center gap-2">
                        <span class="px-2.5 py-0.5 bg-blue-500/10 rounded-full text-blue-500 text-[8px] md:text-[9px] font-black uppercase tracking-widest border border-blue-500/20">
                            <%= user.role || 'Villager' %>
                        </span>
                        <% if (user.is_verified) { %>
                            <i class="fas fa-check-circle text-blue-500 text-xs"></i>
                        <% } %>
                    </div>
                </div>
                
                <div class="flex justify-center gap-6 md:gap-16 mt-8 md:mt-12 bg-slate-950/40 p-4 md:p-6 rounded-3xl border border-white/5 max-w-sm md:max-w-md mx-auto">
                    <div class="text-center">
                        <p class="text-lg md:text-2xl font-black text-white"><%= (typeof posts !== 'undefined') ? posts.length : 0 %></p>
                        <p class="text-[7px] md:text-[8px] text-slate-500 uppercase font-black tracking-widest mt-1">Secrets</p>
                    </div>
                    <div class="w-[1px] bg-white/5"></div>
                    <div class="text-center">
                        <p class="text-lg md:text-2xl font-black text-white"><%= (typeof friendCount !== 'undefined') ? friendCount : 0 %></p>
                        <p class="text-[7px] md:text-[8px] text-slate-500 uppercase font-black tracking-widest mt-1">Kinship</p>
                    </div>
                    <div class="w-[1px] bg-white/5"></div>
                    <div class="text-center">
                        <p class="text-lg md:text-2xl font-black text-white">LVL 1</p>
                        <p class="text-[7px] md:text-[8px] text-slate-500 uppercase font-black tracking-widest mt-1">Spirit</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-between mb-4 px-2">
            <h3 class="text-[9px] font-black uppercase tracking-[0.3em] text-slate-500">Your Echoes</h3>
            <div class="h-[1px] flex-1 bg-white/5 mx-4"></div>
            <i class="fas fa-th-large text-slate-700 text-[10px]"></i>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-2 md:gap-4">
            <% if (typeof posts !== 'undefined' && posts.length > 0) { %>
                <% posts.forEach(post => { 
                    // Safety check: Fallback to an empty string if both content and description are missing
                    const textContent = post.content || post.description || "";
                %>
                    <div class="post-grid-item aspect-square bg-slate-900/50 rounded-3xl md:rounded-[2.5rem] overflow-hidden border border-white/5 group relative">
                        <% if (post.image_url) { %>
                            <% if (post.media_type === 'video') { %>
                                <video src="<%= post.image_url %>" class="w-full h-full object-cover opacity-80" muted loop playsinline></video>
                                <div class="absolute top-2 right-2 w-5 h-5 bg-black/40 backdrop-blur-md rounded-full flex items-center justify-center text-[7px] text-white/60">
                                    <i class="fas fa-play"></i>
                                </div>
                            <% } else { %>
                                <img src="<%= post.image_url %>" class="w-full h-full object-cover opacity-80" loading="lazy">
                            <% } %>
                        <% } else { %>
                            <div class="w-full h-full flex items-center justify-center p-4 text-center bg-slate-950/20">
                                <p class="text-[9px] md:text-[10px] text-slate-600 italic font-medium leading-tight">
                                    "<%= textContent.substring(0, 40) %><%= textContent.length > 40 ? '...' : '' %>"
                                </p>
                            </div>
                        <% } %>

                        <div class="absolute inset-0 hover-overlay md:opacity-0 md:group-hover:opacity-100 transition-all duration-300 flex flex-col items-center justify-end pb-4 gap-3">
                            <div class="flex gap-4 text-white text-[10px] font-black">
                                <span class="flex items-center gap-1"><i class="fas fa-heart text-blue-500 text-[8px]"></i> <%= post.likes_count || 0 %></span>
                                <span class="flex items-center gap-1"><i class="fas fa-comment text-blue-500 text-[8px]"></i> <%= post.comments_count || 0 %></span>
                            </div>
                            
                            <form action="/event/<%= post.id %>/delete" method="POST" onsubmit="return confirm('Burn this secret forever?')">
                                <button type="submit" class="bg-red-500/20 backdrop-blur-md border border-red-500/20 text-red-500 text-[7px] font-black px-4 py-2 rounded-full uppercase tracking-tighter hover:bg-red-600 hover:text-white transition-all">
                                    Burn
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-16 text-center border-2 border-dashed border-white/5 rounded-[2.5rem] bg-slate-900/10">
                    <p class="text-slate-600 font-black uppercase tracking-widest text-[9px]">Scroll empty</p>
                </div>
            <% } %>
        </div>
    </div>

    <nav class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/90 backdrop-blur-2xl border border-white/10 px-8 py-4 rounded-full flex gap-10 shadow-2xl z-[60] md:hidden">
        <a href="/feed" class="text-slate-500"><i class="fas fa-home text-lg"></i></a>
        <a href="/discover" class="text-slate-500"><i class="fas fa-compass text-lg"></i></a>
        <a href="/messages" class="text-slate-500"><i class="fas fa-comment-dots text-lg"></i></a>
        <a href="/profile" class="text-blue-500"><i class="fas fa-user text-lg"></i></a>
    </nav>

    <script>
        // Automatic Play on Mobile Scroll (Intersection Observer)
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const video = entry.target;
                if (entry.isIntersecting) {
                    video.play().catch(() => {});
                } else {
                    video.pause();
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.post-grid-item video').forEach(v => observer.observe(v));
    </script>
</body>
</html>