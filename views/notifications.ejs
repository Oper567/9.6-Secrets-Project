<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <title>Alerts | Apugo Village</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        body { 
            background-color: #020617; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            -webkit-tap-highlight-color: transparent; 
        }
        .glass-nav { 
            background: rgba(15, 23, 42, 0.9); 
            backdrop-filter: blur(20px); 
            -webkit-backdrop-filter: blur(20px);
        }
        
        /* Dropdown Animation */
        #nav-dropdown:not(.hidden) { 
            display: flex !important;
            animation: slideDown 0.3s ease-out forwards; 
        }
        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .unread-dot { 
            width: 10px; height: 10px; 
            background-color: #3b82f6; 
            border-radius: 50%; 
            box-shadow: 0 0 12px #3b82f6; 
        }
        .notif-card { transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1); }
        .notif-card:hover { border-color: rgba(59, 130, 246, 0.4); }
        
        /* Hide scrollbar but keep functionality */
        ::-webkit-scrollbar { width: 0px; background: transparent; }
    </style>
</head>
<body class="text-slate-200 pb-32">

    <nav class="glass-nav border-b border-white/5 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-4">
                    <button id="menu-btn" class="md:hidden text-slate-400 p-1">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 class="text-xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
                </div>
                
                <div class="flex items-center gap-4">
                    <a href="/logout" class="text-[10px] font-black text-slate-500 uppercase border border-slate-800 px-4 py-2 rounded-full hover:bg-red-950/30 hover:text-red-400 transition-all">
                        <i class="fas fa-sign-out-alt md:hidden"></i>
                        <span class="hidden md:inline">Exit Square</span>
                    </a>
                </div>
            </div>

            <div id="nav-dropdown" class="hidden flex-col md:flex-row items-center gap-4 mt-4 pb-2">
                <div class="flex flex-col md:flex-row w-full md:w-auto md:gap-4 text-[10px] font-black uppercase tracking-widest bg-slate-950 md:bg-transparent rounded-2xl border border-slate-800 md:border-0 overflow-hidden shadow-2xl">
                    <a href="/feed" class="px-6 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:text-blue-400 hover:bg-slate-900 transition">Village Square</a>
                    <a href="/discover" class="px-6 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:text-blue-400 hover:bg-slate-900 transition">Discovery</a>
                    <a href="/messages" class="px-6 py-4 border-b border-slate-900 md:border-0 text-slate-400 hover:text-blue-400 hover:bg-slate-900 transition">Whispers</a>
                    <a href="/profile" class="px-6 py-4 text-slate-400 hover:text-blue-400 hover:bg-slate-900 transition">My Hut</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-2xl mx-auto px-6 mt-8">
        <header class="mb-10 flex justify-between items-end">
            <div>
                <h1 class="text-4xl font-black mb-2 italic tracking-tighter text-white uppercase">Alerts</h1>
                <div class="flex items-center gap-3">
                    <div class="h-1 w-8 bg-blue-600"></div>
                    <p class="text-slate-500 text-[9px] uppercase tracking-[0.3em] font-black">Village Echoes</p>
                </div>
            </div>
            <% if (locals.notifications && notifications.length > 0) { %>
                <form action="/notifications/clear" method="POST">
                    <button class="text-[9px] font-black text-slate-600 hover:text-red-500 uppercase tracking-widest transition-colors">
                        Clear All
                    </button>
                </form>
            <% } %>
        </header>

        <div class="space-y-4">
            <% if (locals.notifications && notifications.length > 0) { %>
                <% notifications.forEach(notif => { %>
                    <div class="notif-card bg-slate-900/40 border <%= notif.is_read ? 'border-white/5' : 'border-blue-500/30 bg-blue-900/20' %> rounded-[2rem] p-5 flex items-center justify-between group">
                        <div class="flex items-center gap-4 min-w-0">
                            <div class="relative shrink-0">
                                <div class="w-12 h-12 bg-slate-800 rounded-full flex items-center justify-center border border-slate-700 overflow-hidden shadow-inner">
                                    <% if (notif.sender_pic) { %>
                                        <img src="<%= notif.sender_pic %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <span class="font-bold text-blue-500 uppercase"><%= notif.sender_name ? notif.sender_name[0] : 'V' %></span>
                                    <% } %>
                                </div>
                                <% if (!notif.is_read) { %>
                                    <div class="absolute -top-0.5 -right-0.5 unread-dot border-2 border-slate-950"></div>
                                <% } %>
                            </div>

                            <div class="min-w-0">
                                <p class="text-[13px] text-slate-300 leading-tight">
                                    <span class="font-black text-white">@<%= notif.sender_name ? notif.sender_name.split('@')[0] : 'Anon' %></span> 
                                    <span class="opacity-70"><%= notif.message %></span>
                                </p>
                                <p class="text-[9px] text-slate-600 font-black uppercase mt-1.5 tracking-wider">
                                    <%= new Date(notif.created_at).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-3 pl-4">
                            <% if (notif.type === 'friend_request' && !notif.is_resolved) { %>
                                <div class="flex gap-2">
                                    <form action="/friends/accept/<%= notif.sender_id %>" method="POST">
                                        <button class="bg-blue-600 hover:bg-blue-500 text-white w-9 h-9 rounded-full flex items-center justify-center transition-all active:scale-90 shadow-lg shadow-blue-600/20">
                                            <i class="fas fa-check text-xs"></i>
                                        </button>
                                    </form>
                                    <form action="/friends/decline/<%= notif.sender_id %>" method="POST">
                                        <button class="bg-slate-800 hover:bg-red-900/40 text-slate-400 hover:text-red-500 w-9 h-9 rounded-full flex items-center justify-center transition-all active:scale-90">
                                            <i class="fas fa-times text-xs"></i>
                                        </button>
                                    </form>
                                </div>
                            <% } else { %>
                                <div class="w-8 h-8 flex items-center justify-center text-slate-700 group-hover:text-blue-500 transition-colors">
                                    <% if (notif.type === 'like') { %><i class="fas fa-heart text-sm"></i><% } %>
                                    <% if (notif.type === 'comment') { %><i class="fas fa-comment-dots text-sm"></i><% } %>
                                    <% if (notif.type === 'friend_accept') { %><i class="fas fa-user-plus text-sm"></i><% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="py-24 text-center border border-dashed border-white/5 rounded-[3rem] bg-slate-900/20">
                    <div class="w-20 h-20 bg-slate-900/50 rounded-full flex items-center justify-center mx-auto mb-6 border border-white/5 shadow-inner">
                        <i class="fas fa-wind text-slate-700 text-2xl"></i>
                    </div>
                    <p class="text-slate-600 font-black uppercase tracking-[0.4em] text-[10px]">Quiet in the village</p>
                    <p class="text-slate-800 text-[9px] font-medium mt-2 italic">Check back later for new echoes</p>
                </div>
            <% } %>
        </div>
    </div>

    <nav class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/90 backdrop-blur-2xl border border-white/10 px-8 py-4 rounded-full flex gap-10 shadow-2xl z-[60] md:hidden">
        <a href="/feed" class="text-slate-500 hover:text-blue-400 transition-all"><i class="fas fa-home text-lg"></i></a>
        <a href="/discover" class="text-slate-500 hover:text-blue-400 transition-all"><i class="fas fa-compass text-lg"></i></a>
        <a href="/messages" class="text-slate-500 hover:text-blue-400 transition-all"><i class="fas fa-comment-dots text-lg"></i></a>
        <a href="/notifications" class="text-blue-500"><i class="fas fa-bell text-lg"></i></a>
        <a href="/profile" class="text-slate-500 hover:text-blue-400 transition-all"><i class="fas fa-user text-lg"></i></a>
    </nav>

    <script>
    const currentUserId = '<%= user.id %>';
    let currentFriendId = null;

    // --- SWIPE GESTURE LOGIC ---
    let touchStartX = 0;
    let touchEndX = 0;

    const chatPane = document.querySelector('.chat-pane');

    chatPane.addEventListener('touchstart', e => {
        touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    chatPane.addEventListener('touchend', e => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
    }, { passive: true });

    function handleSwipe() {
        // If swipe distance is more than 100px from left to right
        if (touchEndX - touchStartX > 100) {
            closeChat();
        }
    }
    // ---------------------------

    function selectFriend(id, name, pic) {
        currentFriendId = id;
        document.querySelectorAll('.friend-item').forEach(el => el.classList.remove('active'));
        const activeItem = document.getElementById(`friend-${id}`);
        if(activeItem) activeItem.classList.add('active');

        document.getElementById('paneContainer').classList.add('show-chat');
        document.getElementById('mobileBack').classList.remove('hidden');
        document.getElementById('navHomeLink').classList.add('hidden');
        document.getElementById('inputDock').classList.remove('hidden');
        document.getElementById('chatActions').classList.remove('hidden');
        
        const avatarDiv = document.getElementById('activeChatAvatar');
        avatarDiv.classList.remove('hidden');
        avatarDiv.innerHTML = pic && pic !== 'null' ? `<img src="${pic}" class="w-full h-full object-cover">` : `<span>${name[0].toUpperCase()}</span>`;
        
        document.getElementById('chatHeaderTitle').innerText = `@${name}`;
        document.getElementById('chatStatus').innerHTML = `<span class="flex items-center gap-1"><span class="typing-dot"></span> Whispering</span>`;
        
        fetchMessages(true);
    }

    function closeChat() {
        document.getElementById('paneContainer').classList.remove('show-chat');
        document.getElementById('mobileBack').classList.add('hidden');
        document.getElementById('navHomeLink').classList.remove('hidden');
        document.getElementById('activeChatAvatar').classList.add('hidden');
        document.getElementById('chatHeaderTitle').innerText = 'Whispers';
        document.getElementById('chatStatus').innerText = 'Village Square';
        currentFriendId = null;
    }

    async function fetchMessages(force = false) {
        if (!currentFriendId) return;
        try {
            const res = await fetch(`/api/chat/${currentFriendId}`);
            const messages = await res.json();
            const chatWindow = document.getElementById('chatWindow');
            
            // Simplified scroll check: only scroll if user is near bottom or forced
            const isAtBottom = chatWindow.scrollHeight - chatWindow.scrollTop <= chatWindow.clientHeight + 100;

            chatWindow.innerHTML = '';
            messages.forEach(m => {
                const isMe = m.sender_id == currentUserId;
                const div = document.createElement('div');
                div.className = `bubble ${isMe ? 'bubble-me' : 'bubble-them'}`;
                div.innerHTML = `
                    <div>${m.content}</div>
                    <div class="text-[7px] mt-1 opacity-50 flex items-center justify-end font-black uppercase">
                        ${new Date(m.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                        ${isMe ? (m.is_read ? '<i class="fas fa-check-double ml-1 text-blue-300"></i>' : '<i class="fas fa-check ml-1"></i>') : ''}
                    </div>
                `;
                chatWindow.appendChild(div);
            });

            if (force || isAtBottom) {
                chatWindow.scrollTop = chatWindow.scrollHeight;
            }
        } catch (e) { console.error("Sync error"); }
    }

    document.getElementById('chatForm')?.addEventListener('submit', async e => {
        e.preventDefault();
        const input = document.getElementById('msgInput');
        const content = input.value.trim();
        if (!content || !currentFriendId) return;
        
        // Immediate local UI feel (Optional: add message to DOM instantly here)
        input.value = '';
        
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ receiverId: currentFriendId, content })
        });
        fetchMessages(true);
    });

    // Background sync every 5 seconds
    setInterval(() => { if (currentFriendId) fetchMessages(); }, 5000);
    </script>
</body>
</html>