<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <title>Alerts | Apugo Village</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        body { 
            background-color: #020617; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            -webkit-tap-highlight-color: transparent; 
        }
        .glass-nav { 
            background: rgba(15, 23, 42, 0.9); 
            backdrop-filter: blur(20px); 
            -webkit-backdrop-filter: blur(20px);
        }
        .unread-dot { 
            width: 10px; height: 10px; 
            background-color: #3b82f6; 
            border-radius: 50%; 
            box-shadow: 0 0 12px #3b82f6; 
        }
        .notif-card { transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1); }
        .notif-card:hover { border-color: rgba(59, 130, 246, 0.4); }
        
        @keyframes slideIn {
            from { opacity: 0; transform: translateX(20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        .new-notif-anim { animation: slideIn 0.4s ease-out; }
        ::-webkit-scrollbar { width: 0px; background: transparent; }
    </style>
</head>
<body class="text-slate-200 pb-32">

    <nav class="glass-nav border-b border-white/5 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-4">
                    <h1 class="text-xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
                </div>
                <div class="flex items-center gap-4 text-[10px] font-black uppercase tracking-widest hidden md:flex">
                    <a href="/feed" class="text-slate-400 hover:text-white transition">Square</a>
                    <a href="/messages" class="text-slate-400 hover:text-white transition">Whispers</a>
                    <a href="/profile" class="text-slate-400 hover:text-white transition">My Hut</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-2xl mx-auto px-6 mt-8">
        <header class="mb-10 flex justify-between items-end">
            <div>
                <h1 class="text-4xl font-black mb-2 italic tracking-tighter text-white uppercase">Alerts</h1>
                <div class="flex items-center gap-3">
                    <div class="h-1 w-8 bg-blue-600"></div>
                    <p class="text-slate-500 text-[9px] uppercase tracking-[0.3em] font-black">Village Echoes</p>
                </div>
            </div>
            
            <% if (locals.notifications && notifications.length > 0) { %>
                <form action="/notifications/clear" method="POST">
                    <button type="submit" class="text-[9px] font-black text-slate-600 hover:text-red-500 uppercase tracking-widest transition-colors">
                        Clear All
                    </button>
                </form>
            <% } %>
        </header>

        <div class="space-y-4" id="notification-container">
            <% if (locals.notifications && notifications.length > 0) { %>
                <% notifications.forEach(notif => { %>
                    <div class="notif-card bg-slate-900/40 border <%= notif.is_read ? 'border-white/5' : 'border-blue-500/30 bg-blue-900/20' %> rounded-[2rem] p-5 flex items-center justify-between group">
                        <div class="flex items-center gap-4 min-w-0">
                            <div class="relative shrink-0">
                                <div class="w-12 h-12 bg-slate-800 rounded-full flex items-center justify-center border border-slate-700 overflow-hidden">
                                    <% if (notif.sender_pic) { %>
                                        <img src="<%= notif.sender_pic %>" class="w-full h-full object-cover">
                                    <% } else { %>
                                        <span class="font-bold text-blue-500 uppercase"><%= notif.sender_name ? notif.sender_name[0] : 'V' %></span>
                                    <% } %>
                                </div>
                                <% if (!notif.is_read) { %>
                                    <div class="absolute -top-0.5 -right-0.5 unread-dot border-2 border-slate-950"></div>
                                <% } %>
                            </div>

                            <div class="min-w-0">
                                <p class="text-[13px] text-slate-300 leading-tight">
                                    <span class="font-black text-white">@<%= notif.sender_name ? notif.sender_name.split('@')[0] : 'Anon' %></span> 
                                    <span class="opacity-70"><%= notif.message %></span>
                                </p>
                                <p class="text-[9px] text-slate-600 font-black uppercase mt-1.5 tracking-wider">
                                    <%= new Date(notif.created_at).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-3 pl-4">
                            <% if (notif.type === 'friend_request' && !notif.is_resolved) { %>
                                <div class="flex gap-2">
                                    <form action="/friends/accept/<%= notif.sender_id %>" method="POST">
                                        <button class="bg-blue-600 hover:bg-blue-500 text-white w-9 h-9 rounded-full flex items-center justify-center transition-all shadow-lg shadow-blue-600/20">
                                            <i class="fas fa-check text-xs"></i>
                                        </button>
                                    </form>
                                    <form action="/friends/decline/<%= notif.sender_id %>" method="POST">
                                        <button class="bg-slate-800 hover:bg-red-900/40 text-slate-400 hover:text-red-500 w-9 h-9 rounded-full flex items-center justify-center transition-all">
                                            <i class="fas fa-times text-xs"></i>
                                        </button>
                                    </form>
                                </div>
                            <% } else if (notif.type === 'whisper') { %>
                                <a href="/messages" class="w-8 h-8 flex items-center justify-center text-blue-500">
                                    <i class="fas fa-comment-dots text-sm"></i>
                                </a>
                            <% } else { %>
                                <div class="w-8 h-8 flex items-center justify-center text-slate-700 group-hover:text-blue-500 transition-colors">
                                    <% if (notif.type === 'like') { %><i class="fas fa-heart text-sm"></i><% } %>
                                    <% if (notif.type === 'friend_accept') { %><i class="fas fa-user-plus text-sm"></i><% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div id="empty-state" class="py-24 text-center border border-dashed border-white/5 rounded-[3rem] bg-slate-900/20">
                    <i class="fas fa-wind text-slate-700 text-2xl mb-4"></i>
                    <p class="text-slate-600 font-black uppercase tracking-[0.4em] text-[10px]">Quiet in the village</p>
                </div>
            <% } %>
        </div>
    </div>

    <nav class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/90 backdrop-blur-2xl border border-white/10 px-8 py-4 rounded-full flex gap-10 shadow-2xl z-[60] md:hidden">
        <a href="/feed" class="text-slate-500"><i class="fas fa-home text-lg"></i></a>
        <a href="/messages" class="text-slate-500"><i class="fas fa-comment-dots text-lg"></i></a>
        <a href="/notifications" class="text-blue-500"><i class="fas fa-bell text-lg"></i></a>
        <a href="/profile" class="text-slate-500"><i class="fas fa-user text-lg"></i></a>
    </nav>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const userId = "<%= user.id %>";
        socket.emit('join', userId);

        socket.on('notification_received', (data) => {
            const container = document.getElementById('notification-container');
            const emptyState = document.getElementById('empty-state');
            if (emptyState) emptyState.remove();

            const newCard = document.createElement('div');
            newCard.className = "notif-card bg-blue-900/20 border border-blue-500/30 rounded-[2rem] p-5 flex items-center justify-between new-notif-anim";
            newCard.innerHTML = `
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-white shadow-lg">
                        <i class="fas fa-bolt text-xs"></i>
                    </div>
                    <div>
                        <p class="text-[13px] text-white font-black">New Alert</p>
                        <p class="text-[11px] text-slate-400">${data.message || 'Something happened in the square'}</p>
                    </div>
                </div>
                <button onclick="location.reload()" class="text-blue-500 text-[10px] font-black uppercase px-4 py-2 bg-blue-500/10 rounded-full">Update</button>
            `;
            container.prepend(newCard);
            
            // Play a subtle sound if you like
            // new Audio('/sounds/echo.mp3').play();
        });
    </script>
</body>
</html>