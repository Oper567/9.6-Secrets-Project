<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apugo | Join the Village</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #020617; }
        .glass-panel { background: rgba(15, 23, 42, 0.7); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.05); }
        .input-field {
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
        }
        .input-field:focus {
            border-color: #3b82f6;
            background: rgba(15, 23, 42, 0.8);
        }
        .strength-bar { transition: width 0.5s ease, background-color 0.5s ease; }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-6 overflow-hidden">

    <div class="fixed top-0 left-0 w-96 h-96 bg-blue-600/10 rounded-full blur-[120px] -translate-x-1/2 -translate-y-1/2"></div>
    <div class="fixed bottom-0 right-0 w-96 h-96 bg-indigo-600/10 rounded-full blur-[120px] translate-x-1/2 translate-y-1/2"></div>

    <div class="w-full max-w-lg animate__animated animate__fadeIn">
        <div class="glass-panel p-10 md:p-14 rounded-[3rem] shadow-2xl">
            
            <div class="text-center mb-10">
                <div class="inline-block bg-blue-600/20 p-3 rounded-2xl mb-4">
                    <span class="text-2xl font-black italic text-blue-500">A.</span>
                </div>
                <h1 class="text-3xl font-800 text-white tracking-tighter mb-2">Request Access</h1>
                <p class="text-slate-400">Join the Apugo digital square.</p>
            </div>

            <% if (messages.error) { %>
                <div class="bg-rose-500/10 border border-rose-500/20 text-rose-400 p-4 rounded-2xl mb-6 text-sm flex items-center gap-3 animate__animated animate__shakeX">
                    <i class="fa-solid fa-circle-exclamation"></i> <%= messages.error %>
                </div>
            <% } %>

            <div class="grid grid-cols-1 gap-4 mb-8">
                <a href="/auth/google" class="flex items-center justify-center gap-3 py-4 bg-white/5 border border-white/10 rounded-2xl hover:bg-white/10 transition text-white font-bold group">
                    <img src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png" class="w-5" alt="Google">
                    <span>Continue with Google</span>
                </a>
            </div>

            <div class="relative mb-8">
                <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-slate-800"></div></div>
                <div class="relative flex justify-center text-[10px] uppercase tracking-widest">
                    <span class="bg-[#0b1224] px-4 text-slate-500 font-black">Or Manual Entry</span>
                </div>
            </div>

            <form action="/register" method="POST" class="space-y-6">
                <div>
                    <input type="email" name="email" placeholder="Email Address" required
                        class="input-field w-full px-6 py-4 rounded-2xl outline-none transition-all placeholder:text-slate-600">
                </div>

                <div class="relative">
                    <input type="password" name="password" id="password" placeholder="Create Password" required
                        class="input-field w-full px-6 py-4 rounded-2xl outline-none transition-all placeholder:text-slate-600 pr-14">
                    
                    <button type="button" onclick="togglePassword()" class="absolute right-5 top-5 text-slate-500 hover:text-white transition-colors">
                        <i id="eyeIcon" class="fa-solid fa-eye"></i>
                    </button>

                    <div id="strengthContainer" class="hidden mt-3 px-1">
                        <div class="h-1 w-full bg-slate-800 rounded-full overflow-hidden">
                            <div id="strengthBar" class="strength-bar h-full w-0 bg-red-500"></div>
                        </div>
                        <div class="flex justify-between items-center mt-1">
                            <p id="strengthText" class="text-[9px] uppercase font-black tracking-widest text-slate-500">Security Score</p>
                            <p id="strengthStatus" class="text-[9px] uppercase font-black tracking-widest text-slate-500">None</p>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white py-5 rounded-2xl font-bold text-lg shadow-xl shadow-blue-600/20 transition-all transform active:scale-95">
                    Create Account
                </button>
            </form>

            <div class="mt-10 pt-8 border-t border-slate-800 text-center">
                <p class="text-slate-400 text-sm">
                    Already a member? 
                    <a href="/login" class="text-blue-400 font-bold hover:text-blue-300 transition ml-1 underline underline-offset-4">Sign In</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Toggle Password Visibility
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        // Strength Meter Logic
        const passwordInput = document.getElementById('password');
        const strengthBar = document.getElementById('strengthBar');
        const strengthStatus = document.getElementById('strengthStatus');
        const strengthContainer = document.getElementById('strengthContainer');

        passwordInput.addEventListener('input', () => {
            const val = passwordInput.value;
            if (val.length > 0) {
                strengthContainer.classList.remove('hidden');
            } else {
                strengthContainer.classList.add('hidden');
            }

            let score = 0;
            if (val.length >= 8) score++;
            if (/[A-Z]/.test(val)) score++;
            if (/[0-9]/.test(val)) score++;
            if (/[^A-Za-z0-9]/.test(val)) score++;

            const levels = [
                { width: '25%', color: 'bg-red-500', text: 'Weak', textColor: 'text-red-500' },
                { width: '50%', color: 'bg-yellow-500', text: 'Fair', textColor: 'text-yellow-500' },
                { width: '75%', color: 'bg-blue-500', text: 'Good', textColor: 'text-blue-500' },
                { width: '100%', color: 'bg-emerald-500', text: 'Strong', textColor: 'text-emerald-500' }
            ];

            if (score > 0) {
                const current = levels[score - 1];
                strengthBar.style.width = current.width;
                strengthBar.className = `strength-bar h-full ${current.color}`;
                strengthStatus.innerText = current.text;
                strengthStatus.className = `text-[9px] uppercase font-black tracking-widest ${current.textColor}`;
            } else {
                strengthBar.style.width = '0%';
                strengthStatus.innerText = 'None';
            }
        });
    </script>
</body>
</html>