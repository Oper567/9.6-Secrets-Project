<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>Apugo | Join the Village</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');
        
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            background: #020617; 
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .glass-panel { 
            background: rgba(15, 23, 42, 0.75); 
            backdrop-filter: blur(20px); 
            border: 1px solid rgba(255, 255, 255, 0.08); 
        }

        .input-field {
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            transition: all 0.3s ease;
        }

        .input-field:focus {
            border-color: #3b82f6;
            background: rgba(15, 23, 42, 0.9);
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }

        .strength-bar { transition: width 0.5s ease, background-color 0.5s ease; }
        
        /* Smooth scrolling for mobile keyboard focus */
        html { scroll-behavior: smooth; }
    </style>
</head>
<body class="p-4 md:p-6">

    <div class="fixed top-0 left-0 w-64 h-64 md:w-96 md:h-96 bg-blue-600/10 rounded-full blur-[80px] md:blur-[120px] -translate-x-1/2 -translate-y-1/2 pointer-events-none"></div>
    <div class="fixed bottom-0 right-0 w-64 h-64 md:w-96 md:h-96 bg-indigo-600/10 rounded-full blur-[80px] md:blur-[120px] translate-x-1/2 translate-y-1/2 pointer-events-none"></div>

    <div class="w-full max-w-md animate__animated animate__fadeIn">
        <div class="glass-panel p-6 md:p-12 rounded-[2.5rem] md:rounded-[3rem] shadow-2xl relative z-10">
            
            <div class="text-center mb-6 md:mb-8">
                <div class="inline-block bg-blue-600/20 p-2.5 rounded-xl mb-3">
                    <span class="text-xl font-black italic text-blue-500">A.</span>
                </div>
                <h1 class="text-2xl md:text-3xl font-[800] text-white tracking-tighter mb-1">Join Apugo</h1>
                <p class="text-slate-400 text-xs md:text-sm font-medium">Create your village identity.</p>
            </div>

            <% if (messages.error) { %>
                <div class="bg-rose-500/10 border border-rose-500/20 text-rose-400 p-3.5 rounded-xl mb-5 text-[11px] md:text-sm flex items-center gap-3 animate__animated animate__shakeX">
                    <i class="fa-solid fa-circle-exclamation"></i> <%= messages.error %>
                </div>
            <% } %>

            <div class="mb-6">
                <a href="/auth/google" class="flex items-center justify-center gap-3 py-3.5 bg-white/5 border border-white/10 rounded-xl hover:bg-white/10 transition text-white text-sm font-bold group">
                    <img src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png" class="w-4 md:w-5" alt="Google">
                    <span>Continue with Google</span>
                </a>
            </div>

            <div class="relative mb-6">
                <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-slate-800/50"></div></div>
                <div class="relative flex justify-center text-[9px] uppercase tracking-[0.2em]">
                    <span class="bg-[#050b1d] px-3 text-slate-500 font-black">Or Manual Entry</span>
                </div>
            </div>

            <form action="/register" method="POST" class="space-y-4">
                <div>
                    <input type="email" name="email" placeholder="Email Address" required
                        class="input-field w-full px-5 py-3.5 rounded-xl outline-none text-sm font-medium placeholder:text-slate-600">
                </div>

                <div class="relative">
                    <input type="password" name="password" id="password" placeholder="Create Password" required
                        class="input-field w-full px-5 py-3.5 rounded-xl outline-none text-sm font-medium placeholder:text-slate-600 pr-16">
                    
                    <button type="button" onclick="togglePassword()" id="toggleBtn"
                        class="absolute right-5 top-1/2 -translate-y-1/2 text-[9px] uppercase font-black tracking-widest text-slate-500 hover:text-blue-400 transition-colors">
                        Show
                    </button>

                    <div id="strengthContainer" class="hidden mt-4 px-1">
                        <div class="h-1 w-full bg-slate-800 rounded-full overflow-hidden">
                            <div id="strengthBar" class="strength-bar h-full w-0 bg-red-500"></div>
                        </div>
                        <div class="flex justify-between items-center mt-2">
                            <p class="text-[8px] uppercase font-black tracking-widest text-slate-500">Security Score</p>
                            <p id="strengthStatus" class="text-[8px] uppercase font-black tracking-widest text-slate-500">None</p>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white py-4 rounded-xl font-bold text-base shadow-lg shadow-blue-600/20 transition-all transform active:scale-95 mt-2">
                    Create Account
                </button>
            </form>

            <div class="mt-8 pt-6 border-t border-slate-800/50 text-center">
                <p class="text-slate-400 text-xs font-medium">
                    Already a member? 
                    <a href="/login" class="text-white font-bold hover:text-blue-400 transition ml-1 underline underline-offset-4 decoration-slate-700">Sign In</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Password Visibility Toggle
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleBtn = document.getElementById('toggleBtn');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleBtn.innerText = 'Hide';
                toggleBtn.classList.add('text-blue-500');
            } else {
                passwordInput.type = 'password';
                toggleBtn.innerText = 'Show';
                toggleBtn.classList.remove('text-blue-500');
            }
        }

        // Strength Meter Logic
        const passwordInput = document.getElementById('password');
        const strengthBar = document.getElementById('strengthBar');
        const strengthStatus = document.getElementById('strengthStatus');
        const strengthContainer = document.getElementById('strengthContainer');

        passwordInput.addEventListener('input', () => {
            const val = passwordInput.value;
            val.length > 0 ? strengthContainer.classList.remove('hidden') : strengthContainer.classList.add('hidden');

            let score = 0;
            if (val.length >= 8) score++;
            if (/[A-Z]/.test(val)) score++;
            if (/[0-9]/.test(val)) score++;
            if (/[^A-Za-z0-9]/.test(val)) score++;

            const levels = [
                { width: '25%', color: 'bg-red-500', text: 'Weak', textColor: 'text-red-500' },
                { width: '50%', color: 'bg-yellow-500', text: 'Fair', textColor: 'text-yellow-500' },
                { width: '75%', color: 'bg-blue-500', text: 'Good', textColor: 'text-blue-500' },
                { width: '100%', color: 'bg-emerald-500', text: 'Strong', textColor: 'text-emerald-500' }
            ];

            if (score > 0) {
                const current = levels[score - 1];
                strengthBar.style.width = current.width;
                strengthBar.className = `strength-bar h-full ${current.color}`;
                strengthStatus.innerText = current.text;
                strengthStatus.className = `text-[8px] uppercase font-black tracking-widest ${current.textColor}`;
            } else {
                strengthBar.style.width = '0%';
                strengthStatus.innerText = 'None';
                strengthStatus.className = `text-[8px] uppercase font-black tracking-widest text-slate-500`;
            }
        });
    </script>
</body>
</html>