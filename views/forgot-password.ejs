<body class="bg-slate-950 text-white flex items-center justify-center min-h-screen">
    <div class="bg-slate-900 p-8 rounded-3xl border border-slate-800 w-full max-w-md">
        <h2 class="text-2xl font-bold mb-4">Reset Password</h2>
        <form action="/auth/reset-password" method="POST" class="space-y-4">
            <input type="email" name="email" placeholder="Enter your email" required 
                class="w-full bg-slate-950 border border-slate-800 rounded-full py-2 px-4 outline-none focus:border-blue-500">
            <button type="submit" class="w-full bg-blue-600 py-2 rounded-full font-bold">Send Reset Link</button>
        </form>
        <a href="/login" class="block text-center text-xs text-slate-500 mt-4">Back to Login</a>
    </div>
</body>