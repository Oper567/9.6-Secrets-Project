<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #020617; -webkit-tap-highlight-color: transparent; }
        .glass-nav { background: rgba(15, 23, 42, 0.95); backdrop-filter: blur(12px); }
        .status-online { background-color: #22c55e; box-shadow: 0 0 8px #22c55e; }
        .status-offline { background-color: #64748b; }
        #toast-container { position: fixed; bottom: 20px; left: 20px; right: 20px; z-index: 1000; pointer-events: none; }
        @keyframes slide { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
        .animate-notif { animation: slide 0.3s ease forwards; pointer-events: auto; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
    </style>
</head>
<body class="text-slate-200 min-h-screen pb-20">

    <div id="toast-container"></div>

    <nav class="glass-nav border-b border-slate-800 sticky top-0 z-50 px-3 py-3 md:py-4">
        <div class="max-w-6xl mx-auto flex flex-wrap items-center justify-between gap-3">
            <h1 class="text-xl md:text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <form action="/feed" method="GET" class="order-3 md:order-2 w-full md:w-64 lg:w-80 relative">
                <input type="text" name="search" placeholder="Search village..." value="<%= search %>" 
                    class="w-full bg-slate-950 border border-slate-800 rounded-full py-2 px-10 text-xs md:text-sm outline-none focus:border-blue-600 transition-all text-white">
                <span class="absolute left-4 top-2.5 opacity-50 text-xs">üîç</span>
            </form>

            <div class="order-2 md:order-3 flex items-center gap-4 md:gap-6">
                <div class="flex gap-3 md:gap-5 text-[10px] font-black uppercase tracking-widest overflow-x-auto no-scrollbar">
                    <a href="/feed" class="text-blue-500">Feed</a>
                    <a href="/messages" class="hover:text-white transition relative">
                        Chat
                        <% if (unreadChats > 0) { %>
                            <span class="absolute -top-2 -right-2 bg-blue-600 w-2 h-2 rounded-full animate-pulse"></span>
                        <% } %>
                    </a>
                    <a href="/notifications" class="hover:text-white transition relative">
                        Alerts
                        <% if (unreadCount > 0) { %>
                            <span class="absolute -top-2 -right-2 bg-red-600 w-2 h-2 rounded-full animate-pulse"></span>
                        <% } %>
                    </a>
                </div>
                <a href="/profile" class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center border border-slate-700 hover:border-blue-500 transition overflow-hidden">
                    <span class="text-xs font-bold"><%= user.email[0].toUpperCase() %></span>
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-2 md:px-4 pt-4 grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <div class="lg:col-span-2 space-y-4 md:space-y-6">
            
            <div class="bg-slate-900 border border-slate-800 rounded-2xl p-4 shadow-xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm" class="space-y-3">
                    <textarea name="description" placeholder="Share something with the village..." required 
                        class="w-full bg-transparent outline-none h-20 resize-none text-sm md:text-base text-slate-200 placeholder-slate-600"></textarea>
                    
                    <div class="flex flex-row items-center justify-between border-t border-slate-800 pt-3">
                        <label class="cursor-pointer group flex items-center gap-2">
                            <input type="file" name="localMedia" id="fileInput" class="hidden" accept="image/*,video/*">
                            <span class="bg-slate-800 p-2 rounded-full group-hover:bg-slate-700 transition-all text-sm">üì∏</span>
                            <span id="fileNameDisplay" class="text-[10px] text-slate-500 font-bold uppercase">Add Media</span>
                        </label>

                        <button type="submit" id="postBtn" class="bg-blue-600 px-6 py-2 rounded-full font-black text-xs md:text-sm text-white flex items-center gap-2 transition active:scale-95 disabled:opacity-50">
                            <span id="btnText">POST</span>
                            <svg id="btnSpinner" class="hidden animate-spin h-3 w-3 text-white" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>

            <% posts.forEach(p => { %>
                <article class="bg-slate-900 border border-slate-800 rounded-2xl p-4 md:p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-10 h-10 bg-gradient-to-tr from-blue-700 to-blue-500 rounded-full flex items-center justify-center font-black text-sm shadow-lg text-white">
                                    <%= p.author[0].toUpperCase() %>
                                </div>
                                <% let diff = Math.floor((new Date() - new Date(p.last_active)) / 1000); %>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-900 rounded-full <%= diff < 300 ? 'status-online' : 'status-offline' %>"></span>
                            </div>
                            <div>
                                <div class="flex items-center gap-1">
                                    <p class="font-bold text-sm">@<%= p.author.split('@')[0] %></p>
                                    <% if (p.is_verified) { %><span class="text-blue-500 text-[10px]">‚úî</span><% } %>
                                    
                                    <% if (user && p.created_by !== user.id && !p.friend_status) { %>
                                        <form action="/friends/request/<%= p.created_by %>" method="POST" class="inline">
                                            <button class="text-[10px] text-blue-400 ml-2 font-black uppercase hover:underline">+ Follow</button>
                                        </form>
                                    <% } %>
                                </div>
                                <p class="text-[10px] text-slate-500 uppercase font-black tracking-wider">
                                    <%= diff < 60 ? '‚ö° Just Now' : Math.floor(diff/60) + 'm ago' %>
                                </p>
                            </div>
                        </div>
                        <% if (user && (user.id === p.created_by || user.role === 'admin')) { %>
                            <button onclick="openDeleteModal('<%= p.id %>')" class="text-slate-600 hover:text-red-500 transition">üóëÔ∏è</button>
                        <% } %>
                    </div>

                    <p class="text-slate-300 mb-4 text-sm md:text-base leading-relaxed"><%= p.description %></p>

                    <% if (p.image_url) { %>
                        <div class="rounded-xl overflow-hidden border border-slate-800 mb-4 bg-black shadow-inner">
                            <% if (p.media_type === 'video') { %>
                                <video controls playsinline class="w-full max-h-[500px]">
                                    <source src="<%= p.image_url %>" type="video/mp4">
                                </video>
                            <% } else { %>
                                <img src="<%= p.image_url %>" class="w-full h-auto object-cover" loading="lazy">
                            <% } %>
                        </div>
                    <% } %>

                    <div class="flex gap-6 pt-4 border-t border-slate-800/50 text-[11px] font-black uppercase tracking-widest">
                        <form action="/event/<%= p.id %>/like" method="POST">
                            <button class="hover:text-red-500 transition-colors flex items-center gap-2">
                                <span>‚ù§Ô∏è</span> <%= p.likes_count || 0 %>
                            </button>
                        </form>
                        <a href="/messages" class="text-slate-500 hover:text-white transition flex items-center gap-2">
                            <span>üí¨</span> Chat
                        </a>
                    </div>
                </article>
            <% }) %>
        </div>

        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6 sticky top-28 shadow-2xl">
                <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-[0.2em] mb-6 border-b border-slate-800 pb-2">Village Trends</h3>
                <div class="space-y-6">
                    <% trending.forEach(t => { %>
                        <div class="group cursor-pointer">
                            <p class="text-xs font-bold text-slate-200 group-hover:text-blue-400 transition truncate"><%= t.description %></p>
                            <p class="text-[9px] text-slate-500 font-black mt-1 uppercase"><%= t.likes_count %> Villagers Liked</p>
                        </div>
                    <% }) %>
                </div>
            </div>
        </aside>
    </main>

    <div id="deleteModal" class="fixed inset-0 bg-black/90 backdrop-blur-sm z-[100] hidden flex items-center justify-center p-4">
        <div class="bg-slate-900 border border-slate-800 p-8 rounded-3xl max-w-sm w-full text-center">
            <h3 class="font-black text-xl mb-2 italic">REMOVE POST?</h3>
            <p class="text-slate-400 text-sm mb-8">This update will be removed from the village square forever.</p>
            <div class="flex gap-4">
                <button onclick="closeDeleteModal()" class="flex-1 py-3 rounded-full bg-slate-800 font-black text-xs uppercase tracking-widest">Cancel</button>
                <form id="deleteForm" method="POST" class="flex-1">
                    <button type="submit" class="w-full py-3 rounded-full bg-red-600 font-black text-xs uppercase tracking-widest text-white">Delete</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // 1. Media Preview Name
        document.getElementById('fileInput').onchange = function(e) {
            const fileName = e.target.files[0]?.name || "Add Media";
            document.getElementById('fileNameDisplay').innerText = fileName.length > 15 ? fileName.substring(0, 15) + "..." : fileName;
        };

        // 2. Loading State for Posting
        document.getElementById('postForm').onsubmit = function() {
            document.getElementById('postBtn').disabled = true;
            document.getElementById('btnText').innerText = "UPLOADING...";
            document.getElementById('btnSpinner').classList.remove('hidden');
        };

        // 3. Delete Modal Logic
        function openDeleteModal(postId) {
            const modal = document.getElementById('deleteModal');
            document.getElementById('deleteForm').action = `/admin/event/${postId}/delete`;
            modal.classList.remove('hidden');
        }
        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        // 4. Toast Notifications
        function showToast(msg, color = "bg-blue-600") {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `${color} text-white px-6 py-4 rounded-2xl shadow-2xl mb-3 animate-notif text-xs font-black uppercase tracking-widest flex justify-between items-center`;
            toast.innerHTML = `<span>${msg}</span><button onclick="this.parentElement.remove()" class="ml-4 opacity-50">‚úï</button>`;
            container.appendChild(toast);
            setTimeout(() => { if(toast) toast.remove(); }, 5000);
        }

        <% if (messages.success) { %> showToast("<%= messages.success %>"); <% } %>
        <% if (messages.error) { %> showToast("<%= messages.error %>", "bg-red-600"); <% } %>
    </script>
</body>
</html>