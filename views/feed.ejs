<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #020617; -webkit-tap-highlight-color: transparent; font-family: 'Inter', sans-serif; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(20px); }
        .status-online { background-color: #22c55e; box-shadow: 0 0 8px #22c55e; }
        .status-offline { background-color: #64748b; }
        
        /* Hide Scrollbar */
        ::-webkit-scrollbar { width: 0px; background: transparent; }
        
        /* Dropdown Animation */
        #nav-dropdown:not(.hidden) { animation: slideDown 0.3s ease-out forwards; }
        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        #toast-container { position: fixed; bottom: 20px; left: 20px; right: 20px; z-index: 1000; pointer-events: none; }
        .animate-notif { animation: slideUp 0.4s ease forwards; pointer-events: auto; }
        @keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
    </style>
</head>
<body class="text-slate-200 min-h-screen">

    <div id="toast-container"></div>

    <nav class="glass-nav border-b border-slate-800 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <h1 class="text-xl md:text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
                
                <div class="flex items-center gap-4">
                    <div class="relative cursor-pointer p-1" onclick="checkNotifs()">
                        <span class="text-lg">üîî</span>
                        <span id="notif-badge" class="absolute top-0 right-0 bg-red-600 text-[9px] px-1.5 rounded-full border border-slate-900 <%= unreadCount > 0 ? '' : 'hidden' %>"><%= unreadCount %></span>
                    </div>

                    <button id="menu-btn" class="md:hidden flex flex-col gap-1.5 px-2 py-2 border border-slate-800 rounded-lg bg-slate-900">
                        <span class="w-5 h-0.5 bg-slate-300"></span>
                        <span class="w-5 h-0.5 bg-slate-300"></span>
                    </button>

                    <a href="/logout" class="hidden md:block text-[10px] font-black text-slate-500 uppercase border border-slate-800 px-3 py-1 rounded-full hover:bg-red-900/20 hover:text-red-500 transition-all">Exit</a>
                </div>
            </div>

            <div id="nav-dropdown" class="hidden md:flex flex-col md:flex-row items-center gap-4 mt-4 md:mt-4">
                <form action="/feed" method="GET" class="relative w-full">
                    <input type="text" name="search" placeholder="Search secrets..." value="<%= search %>" 
                        class="w-full bg-slate-950 border border-slate-800 rounded-xl py-2.5 px-10 text-xs outline-none focus:border-blue-600 transition-all text-white">
                    <span class="absolute left-4 top-3 text-xs opacity-50">üîç</span>
                </form>

                <div class="flex flex-col md:flex-row w-full md:w-auto md:gap-4 text-[10px] font-black uppercase tracking-widest bg-slate-950 md:bg-transparent rounded-xl border border-slate-800 md:border-0 overflow-hidden shadow-2xl md:shadow-none">
                    <a href="/feed" class="px-5 py-4 md:py-1 border-b border-slate-900 md:border-0 text-blue-500 hover:bg-slate-900 md:hover:bg-transparent transition">Feed</a>
                    <a href="/discover" class="px-5 py-4 md:py-1 border-b border-slate-900 md:border-0 text-slate-400 hover:bg-slate-900 md:hover:bg-transparent transition">Discover</a>
                    <a href="/messages" class="px-5 py-4 md:py-1 border-b border-slate-900 md:border-0 text-slate-400 hover:bg-slate-900 md:hover:bg-transparent transition">Whispers</a>
                    <a href="/profile" class="px-5 py-4 md:py-1 text-slate-400 hover:bg-slate-900 md:hover:bg-transparent transition">Profile</a>
                    <a href="/logout" class="md:hidden px-5 py-4 text-red-500 bg-red-950/10 hover:bg-red-950/30 transition border-t border-slate-800 font-black">Exit Village</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 pt-6 grid grid-cols-1 lg:grid-cols-3 gap-6 pb-20">
        
        <div class="lg:col-span-2 space-y-6">
            
            <% if (announcements && announcements.length > 0) { %>
                <div class="space-y-2">
                    <p class="text-[9px] font-black text-blue-500 uppercase tracking-widest ml-1">Elders' Pin</p>
                    <% announcements.forEach(a => { %>
                        <div class="bg-blue-600/5 border border-blue-500/20 rounded-2xl p-4 flex gap-3 items-center">
                            <span class="text-lg">üì¢</span>
                            <p class="text-xs text-blue-100 font-medium leading-tight"><%= a.description %></p>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="bg-slate-900 border border-slate-800 rounded-2xl p-4 shadow-xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm" class="space-y-4">
                    <textarea name="description" placeholder="Share a village secret..." required 
                        class="w-full bg-transparent outline-none h-16 resize-none text-sm text-slate-200 placeholder-slate-600"></textarea>
                    
                    <div class="flex items-center justify-between border-t border-slate-800 pt-3">
                        <div class="flex items-center gap-2">
                            <input type="file" name="localMedia" id="fileInput" class="hidden" accept="image/*,video/*">
                            <label for="fileInput" class="cursor-pointer bg-slate-800 hover:bg-slate-700 text-slate-300 px-4 py-2 rounded-xl text-[10px] font-black uppercase transition">
                                üì∑ Media
                            </label>
                        </div>

                        <button type="submit" id="postBtn" class="bg-blue-600 px-6 py-2.5 rounded-full font-black text-[10px] text-white uppercase tracking-widest transition active:scale-95 flex items-center gap-2">
                            <span id="btnText">Publish</span>
                        </button>
                    </div>
                </form>
            </div>

            <% posts.forEach(p => { %>
                <article class="bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-lg">
                    <div class="p-4 flex justify-between items-center">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-10 h-10 bg-slate-800 border border-slate-700 rounded-full flex items-center justify-center font-bold text-blue-500 text-sm uppercase">
                                    <%= p.author[0] %>
                                </div>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-900 rounded-full <%= p.is_online ? 'status-online' : 'status-offline' %>"></span>
                            </div>
                            <div>
                                <div class="flex items-center gap-1">
                                    <p class="font-bold text-xs">@<%= p.author.split('@')[0] %></p>
                                    <% if (p.is_verified) { %><span class="text-blue-500 text-[10px]">‚úî</span><% } %>
                                </div>
                                <p class="text-[8px] text-slate-600 uppercase font-black tracking-tighter"><%= new Date(p.created_at).toLocaleDateString() %></p>
                            </div>
                        </div>
                        
                        <% if (user.id !== p.created_by) { %>
                            <form action="/friends/request/<%= p.created_by %>" method="POST">
                                <button class="text-[9px] border border-slate-700 px-3 py-1.5 rounded-lg text-slate-400 uppercase font-black hover:bg-slate-800 active:scale-90 transition-all">Add +</button>
                            </form>
                        <% } %>
                    </div>

                    <div class="px-4 pb-3">
                        <p class="text-slate-300 text-sm leading-snug"><%= p.description %></p>
                    </div>

                    <% if (p.image_url) { %>
                        <div class="bg-black flex items-center justify-center border-y border-slate-800">
                            <% if (p.media_type === 'video') { %>
                                <video controls preload="metadata" class="w-full max-h-[400px]">
                                    <source src="<%= p.image_url %>" type="video/mp4">
                                </video>
                            <% } else { %>
                                <img src="<%= p.image_url %>" class="w-full h-auto max-h-[500px] object-contain" loading="lazy">
                            <% } %>
                        </div>
                    <% } %>

                    <div class="p-4">
                        <div class="flex gap-6 text-xs font-black uppercase">
                            <form action="/event/<%= p.id %>/like" method="POST">
                                <button class="flex items-center gap-1.5 <%= p.liked_by_me ? 'text-red-500' : 'text-slate-500' %>">
                                    <span><%= p.liked_by_me ? '‚ù§Ô∏è' : 'ü§ç' %></span> <%= p.likes_count || 0 %>
                                </button>
                            </form>
                            <div class="text-slate-500 flex items-center gap-1.5">
                                üí¨ <%= p.comments_list ? p.comments_list.length : 0 %>
                            </div>
                        </div>

                        <div class="mt-4 space-y-2 border-t border-slate-800 pt-3">
                            <% if (p.comments_list) { p.comments_list.slice(0, 2).forEach(c => { %>
                                <div class="text-[11px] leading-tight flex gap-2">
                                    <span class="text-blue-500 font-bold shrink-0">@<%= c.author.split('@')[0] %></span>
                                    <span class="text-slate-400"><%= c.content %></span>
                                </div>
                            <% })} %>
                            <form action="/event/<%= p.id %>/comment" method="POST" class="mt-3 flex gap-2">
                                <input type="text" name="content" placeholder="Reply..." required 
                                    class="flex-1 bg-slate-950 border border-slate-800 rounded-lg px-3 py-2.5 text-[11px] outline-none focus:border-blue-600">
                                <button class="text-blue-500 text-[10px] font-black uppercase px-2">Send</button>
                            </form>
                        </div>
                    </div>
                </article>
            <% }) %>
        </div>

        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-2xl p-6 sticky top-28">
                <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-widest mb-4">Trending</h3>
                <% trending.forEach(t => { %>
                    <div class="mb-5 last:mb-0">
                        <p class="text-xs font-bold text-slate-300 line-clamp-2"># <%= t.description %></p>
                        <p class="text-[8px] text-blue-600 font-black uppercase mt-1"><%= t.likes_count %> Vibes</p>
                    </div>
                <% }) %>
            </div>
        </aside>
    </main>

    <script>
        // MOBILE MENU TOGGLE
        const menuBtn = document.getElementById('menu-btn');
        const navDropdown = document.getElementById('nav-dropdown');

        menuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            navDropdown.classList.toggle('hidden');
            navDropdown.classList.toggle('flex');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!navDropdown.classList.contains('hidden') && !navDropdown.contains(e.target) && !menuBtn.contains(e.target)) {
                navDropdown.classList.add('hidden');
                navDropdown.classList.remove('flex');
            }
        });

        // NOTIFICATION MOCK (Add your actual logic)
        function checkNotifs() {
            window.location.href = '/notifications';
        }
    </script>
</body>
</html>