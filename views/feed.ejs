<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apugo | Feed</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #020617; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(12px); }
        .status-online { background-color: #22c55e; box-shadow: 0 0 8px #22c55e; }
        .status-offline { background-color: #64748b; }
        #toast-container { position: fixed; bottom: 20px; left: 20px; z-index: 1000; }
        @keyframes slide { from { transform: translateX(-100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
        .animate-notif { animation: slide 0.4s ease forwards; }
    </style>
</head>
<body class="text-slate-200 min-h-screen">

    <div id="toast-container"></div>

    <nav class="glass-nav border-b border-slate-800 p-4 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            <h1 class="text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <form action="/feed" method="GET" class="relative w-full md:w-80">
                <input type="text" name="search" placeholder="Search..." value="<%= search %>" class="w-full bg-slate-950 border border-slate-800 rounded-full py-1.5 px-10 text-sm outline-none focus:border-blue-600">
                <span class="absolute left-4 top-2 text-slate-500">üîç</span>
            </form>

            <div class="flex items-center gap-6">
                <div class="flex gap-6 text-[10px] font-black uppercase tracking-widest">
                    <a href="/feed" class="text-blue-500">Feed</a>
                    <a href="/profile" class="hover:text-white transition">Profile</a>
                    <a href="/settings" class="hover:text-white transition">Settings</a>
                </div>
                <div class="relative cursor-pointer" onclick="checkNotifs()">
                    <span>üîî</span>
                    <span id="notif-badge" class="absolute -top-1 -right-1 bg-red-600 text-[10px] px-1 rounded-full <%= unreadCount > 0 ? '' : 'hidden' %>"><%= unreadCount %></span>
                </div>
                <a href="/logout" class="text-red-500 font-bold text-xs uppercase">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 pt-8 grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6">
                <form action="/event/create" method="POST" enctype="multipart/form-data" class="space-y-4">
                    <textarea name="description" placeholder="What's happening?" required class="w-full bg-transparent outline-none h-20 resize-none text-lg"></textarea>
                    <div class="flex items-center justify-between border-t border-slate-800 pt-4">
                        <input type="file" name="localMedia" class="text-xs text-slate-500">
                        <button class="bg-blue-600 px-6 py-2 rounded-full font-black text-white">POST</button>
                    </div>
                </form>
            </div>

            <% posts.forEach(p => { %>
                <article class="bg-slate-900 border border-slate-800 rounded-3xl p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center font-bold text-white"><%= p.author[0].toUpperCase() %></div>
                                <% let isOnline = (new Date() - new Date(p.last_active)) < 300000; %>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-900 rounded-full <%= isOnline ? 'status-online' : 'status-offline' %>"></span>
                            </div>
                            <div>
                                <p class="font-bold text-sm">@<%= p.author.split('@')[0] %></p>
                                <p class="text-[10px] text-slate-500 uppercase font-black"><%= isOnline ? 'Online' : 'Offline' %></p>
                            </div>
                        </div>
                        <% if (user && (user.id === p.created_by || user.role === 'admin')) { %>
                            <form action="/event/<%= p.id %>/delete" method="POST"><button class="text-slate-600">üóëÔ∏è</button></form>
                        <% } %>
                    </div>

                    <p class="text-slate-300 mb-4"><%= p.description %></p>

                    <% if (p.image_url) { %>
                        <div class="rounded-2xl overflow-hidden border border-slate-800 mb-4">
                            <% if (p.media_type === 'video') { %>
                                <video controls class="w-full"><source src="<%= p.image_url %>" type="video/mp4"></video>
                            <% } else { %>
                                <img src="<%= p.image_url %>" class="w-full">
                            <% } %>
                        </div>
                    <% } %>

                    <div class="flex gap-6 pt-4 border-t border-slate-800 text-sm font-bold">
                        <form action="/event/<%= p.id %>/like" method="POST"><button>‚ù§Ô∏è <%= p.likes %></button></form>
                        <span class="text-slate-500">üí¨ <%= p.comments_list ? p.comments_list.length : 0 %></span>
                    </div>

                    <div class="mt-4 space-y-2">
                        <% if (p.comments_list) { p.comments_list.forEach(c => { %>
                            <div class="bg-slate-800/40 p-2 rounded-xl text-xs"><span class="text-blue-400 font-bold">@<%= c.author.split('@')[0] %>:</span> <%= c.content %></div>
                        <% })} %>
                        <form action="/event/<%= p.id %>/comment" method="POST" class="flex gap-2 mt-2">
                            <input type="text" name="content" placeholder="Comment..." required class="flex-1 bg-slate-800 rounded-full px-4 py-1 text-xs outline-none">
                            <button class="text-blue-500 font-bold text-xs">Send</button>
                        </form>
                    </div>
                </article>
            <% }) %>
        </div>

        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6 sticky top-28">
                <h3 class="text-xs font-black text-blue-500 uppercase tracking-widest mb-4">Trending</h3>
                <% trending.forEach(t => { %>
                    <div class="mb-4 border-b border-slate-800 pb-2">
                        <p class="text-sm font-bold truncate"><%= t.description %></p>
                        <p class="text-[10px] text-blue-500 font-black"><%= t.likes_count %> LIKES</p>
                    </div>
                <% }) %>
            </div>
        </aside>
    </main>

    <script>
        async function checkNotifs() {
            const res = await fetch('/api/notifications');
            const data = await res.json();
            const container = document.getElementById('toast-container');
            data.forEach(n => {
                const toast = document.createElement('div');
                toast.className = "bg-blue-600 text-white p-4 rounded-2xl shadow-2xl mb-2 animate-notif";
                toast.innerText = n.message;
                container.appendChild(toast);
                setTimeout(() => toast.remove(), 4000);
            });
            if(data.length > 0) document.getElementById('notif-badge').classList.add('hidden');
        }
        setInterval(checkNotifs, 10000);
    </script>
</body>
</html>