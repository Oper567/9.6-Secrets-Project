<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apugo | Feed</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #020617; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(12px); }
        .status-online { background-color: #22c55e; box-shadow: 0 0 8px #22c55e; }
        .status-offline { background-color: #64748b; }
        #toast-container { position: fixed; bottom: 20px; left: 20px; z-index: 1000; }
        @keyframes slide { from { transform: translateX(-100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
        .animate-notif { animation: slide 0.4s ease forwards; }
        html, body { overflow-x: hidden; scroll-behavior: smooth; }
    </style>
</head>
<body class="text-slate-200 min-h-screen">

    <div id="toast-container"></div>

    <nav class="glass-nav border-b border-slate-800 p-4 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            <h1 class="text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <form action="/feed" method="GET" class="relative w-full md:w-80">
                <input type="text" name="search" placeholder="Search..." value="<%= search %>" class="w-full bg-slate-950 border border-slate-800 rounded-full py-1.5 px-10 text-sm outline-none focus:border-blue-600 transition-all">
                <span class="absolute left-4 top-2 text-slate-500">üîç</span>
            </form>

            <div class="flex items-center gap-6">
                <div class="flex gap-6 text-[10px] font-black uppercase tracking-widest">
                    <a href="/feed" class="text-blue-500">Feed</a>
                    <a href="/profile" class="hover:text-white transition">Profile</a>
                    <a href="/settings" class="hover:text-white transition">Settings</a>
                </div>
                <div class="relative cursor-pointer" onclick="checkNotifs()">
                    <span>üîî</span>
                    <span id="notif-badge" class="absolute -top-1 -right-1 bg-red-600 text-[10px] px-1 rounded-full <%= unreadCount > 0 ? '' : 'hidden' %>"><%= unreadCount %></span>
                </div>
                <a href="/logout" class="text-red-500 font-bold text-xs uppercase hover:underline">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 pt-8 grid grid-cols-1 lg:grid-cols-3 gap-8 pb-10">
        
        <div class="lg:col-span-2 space-y-6">
            
            <div class="bg-slate-900 border border-slate-800 rounded-2xl md:rounded-3xl p-4 md:p-6 shadow-xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm" class="space-y-4">
                    <textarea name="description" placeholder="What's happening in the village?" required 
                        class="w-full bg-transparent outline-none h-20 resize-none text-base md:text-lg text-slate-200 placeholder-slate-600"></textarea>
                    
                    <div class="flex flex-col sm:flex-row items-center justify-between border-t border-slate-800 pt-4 gap-4">
                        <div class="w-full sm:w-auto">
                            <input type="file" name="localMedia" id="fileInput"
                                class="block w-full text-xs text-slate-500 
                                file:mr-4 file:py-2 file:px-4 
                                file:rounded-full file:border-0 
                                file:text-xs file:font-semibold 
                                file:bg-slate-800 file:text-slate-300 
                                hover:file:bg-slate-700 transition-all cursor-pointer">
                        </div>

                        <button type="submit" id="postBtn" class="w-full sm:w-auto bg-blue-600 px-8 py-2.5 rounded-full font-black text-white flex items-center justify-center gap-2 transition active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed">
                            <span id="btnText">POST</span>
                            <svg id="btnSpinner" class="hidden animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>

            <% if (posts.length === 0) { %>
                <div class="text-center py-20 bg-slate-900/50 rounded-3xl border border-dashed border-slate-800">
                    <p class="text-slate-500 font-bold">No posts found. Be the first to break the silence! üå¥</p>
                </div>
            <% } %>

            <% posts.forEach(p => { %>
                <article class="bg-slate-900 border border-slate-800 rounded-2xl md:rounded-3xl p-5 md:p-6 hover:border-slate-700 transition-colors">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center font-bold text-white shadow-lg"><%= p.author[0].toUpperCase() %></div>
                                <% let isOnline = (new Date() - new Date(p.last_active)) < 300000; %>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-900 rounded-full <%= isOnline ? 'status-online' : 'status-offline' %>"></span>
                            </div>
                            <div>
                                <p class="font-bold text-sm">@<%= p.author.split('@')[0] %></p>
                                <p class="text-[10px] text-slate-500 uppercase font-black"><%= isOnline ? 'Online' : 'Offline' %></p>
                            </div>
                        </div>
                        <% if (user && (user.id === p.created_by || user.role === 'admin')) { %>
                            <button onclick="openDeleteModal('<%= p.id %>')" class="text-slate-600 hover:text-red-500 transition-colors p-1">üóëÔ∏è</button>
                        <% } %>
                    </div>

                    <p class="text-slate-300 mb-4 text-sm md:text-base leading-relaxed"><%= p.description %></p>

                    <% if (p.image_url) { %>
                        <div class="rounded-2xl overflow-hidden border border-slate-800 mb-4 bg-black/20">
                            <% if (p.media_type === 'video') { %>
                                <video controls class="w-full max-h-[500px]"><source src="<%= p.image_url %>" type="video/mp4"></video>
                            <% } else { %>
                                <img src="<%= p.image_url %>" class="w-full h-auto object-cover" loading="lazy">
                            <% } %>
                        </div>
                    <% } %>

                    <div class="flex gap-6 pt-4 border-t border-slate-800 text-sm font-bold">
                        <form action="/event/<%= p.id %>/like" method="POST">
                            <button class="hover:text-red-500 transition-colors flex items-center gap-1.5">‚ù§Ô∏è <%= p.likes %></button>
                        </form>
                        <span class="text-slate-500 flex items-center gap-1.5">üí¨ <%= p.comments_list ? p.comments_list.length : 0 %></span>
                    </div>

                    <div class="mt-4 space-y-2">
                        <% if (p.comments_list) { p.comments_list.forEach(c => { %>
                            <div class="bg-slate-800/40 p-2.5 rounded-xl text-xs">
                                <span class="text-blue-400 font-bold">@<%= c.author.split('@')[0] %>:</span> 
                                <span class="text-slate-300"><%= c.content %></span>
                            </div>
                        <% })} %>
                        <form action="/event/<%= p.id %>/comment" method="POST" class="flex gap-2 mt-2">
                            <input type="text" name="content" placeholder="Write a comment..." required class="flex-1 bg-slate-800 rounded-full px-4 py-2 text-xs outline-none focus:ring-1 focus:ring-blue-600 transition-all">
                            <button class="text-blue-500 font-bold text-xs px-2 hover:underline">Send</button>
                        </form>
                    </div>
                </article>
            <% }) %>
        </div>

        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6 sticky top-28 shadow-xl">
                <h3 class="text-xs font-black text-blue-500 uppercase tracking-widest mb-4">Trending in Apugo</h3>
                <% trending.forEach(t => { %>
                    <div class="mb-4 border-b border-slate-800 pb-3 last:border-0">
                        <p class="text-sm font-bold truncate text-slate-200"><%= t.description %></p>
                        <p class="text-[10px] text-blue-500 font-black mt-1"><%= t.likes_count %> LIKES</p>
                    </div>
                <% }) %>
            </div>
        </aside>
    </main>

    <div id="deleteModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
        <div class="absolute inset-0 bg-slate-950/80 backdrop-blur-sm" onclick="closeDeleteModal()"></div>
        <div class="relative bg-slate-900 border border-slate-800 p-8 rounded-3xl max-w-sm w-full shadow-2xl scale-up">
            <h3 class="text-xl font-black mb-2">Delete Post?</h3>
            <p class="text-slate-400 text-sm mb-6">This will be removed from the village square forever. You cannot undo this.</p>
            <div class="flex flex-col gap-3">
                <form id="confirmDeleteForm" method="POST">
                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 py-3 rounded-full font-black text-white transition active:scale-95">
                        DELETE FOREVER
                    </button>
                </form>
                <button onclick="closeDeleteModal()" class="w-full bg-slate-800 hover:bg-slate-700 py-3 rounded-full font-black text-white transition active:scale-95">
                    CANCEL
                </button>
            </div>
        </div>
    </div>

    <script>
        // NOTIFICATIONS
        async function checkNotifs() {
            try {
                const res = await fetch('/api/notifications');
                const data = await res.json();
                const container = document.getElementById('toast-container');
                data.forEach(n => {
                    const toast = document.createElement('div');
                    toast.className = "bg-blue-600 text-white p-4 rounded-2xl shadow-2xl mb-2 animate-notif text-sm font-bold flex items-center gap-2";
                    toast.innerHTML = `<span>üå¥</span> ${n.message}`;
                    container.appendChild(toast);
                    setTimeout(() => {
                        toast.style.opacity = '0';
                        setTimeout(() => toast.remove(), 500);
                    }, 4500);
                });
                if(data.length > 0) document.getElementById('notif-badge').classList.add('hidden');
            } catch (err) { console.error("Notification Error:", err); }
        }
        setInterval(checkNotifs, 10000);

        // POST LOADING
        document.getElementById('postForm').addEventListener('submit', function() {
            const btn = document.getElementById('postBtn');
            const text = document.getElementById('btnText');
            const spinner = document.getElementById('btnSpinner');

            btn.disabled = true;
            text.innerText = "UPLOADING...";
            spinner.classList.remove('hidden');
        });

        // DELETE MODAL LOGIC
        function openDeleteModal(postId) {
            const modal = document.getElementById('deleteModal');
            const form = document.getElementById('confirmDeleteForm');
            form.action = `/event/${postId}/delete`;
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden'; // Prevent scroll
        }

        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto'; // Re-enable scroll
        }
    </script>
</body>
</html>