<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #020617; }
        .glass-nav { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(12px); }
        .status-online { background-color: #22c55e; box-shadow: 0 0 8px #22c55e; }
        .status-offline { background-color: #64748b; }
        #toast-container { position: fixed; bottom: 20px; left: 20px; z-index: 1000; }
        @keyframes slide { from { transform: translateX(-100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
        .animate-notif { animation: slide 0.4s ease forwards; }
        html, body { overflow-x: hidden; scroll-behavior: smooth; }
    </style>
</head>
<body class="text-slate-200 min-h-screen">

    <div id="toast-container"></div>

    <nav class="glass-nav border-b border-slate-800 p-4 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            <h1 class="text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <form action="/feed" method="GET" class="relative w-full md:w-80">
                <input type="text" name="search" placeholder="Search the village..." value="<%= search %>" class="w-full bg-slate-950 border border-slate-800 rounded-full py-1.5 px-10 text-sm outline-none focus:border-blue-600 transition-all text-white">
                <span class="absolute left-4 top-2 text-slate-500">üîç</span>
            </form>

            <div class="flex items-center gap-6">
                <div class="flex gap-6 text-[10px] font-black uppercase tracking-widest">
                    <a href="/feed" class="text-blue-500">Feed</a>
                    <a href="/discover" class="hover:text-blue-400 transition">Discover</a>
                    <a href="/messages" class="hover:text-white transition">Messages</a>
                    <a href="/profile" class="hover:text-white transition">Profile</a>
                </div>
                <div class="relative cursor-pointer" onclick="checkNotifs()">
                    <span class="text-xl">üîî</span>
                    <span id="notif-badge" class="absolute -top-1 -right-1 bg-red-600 text-[10px] px-1.5 rounded-full <%= unreadCount > 0 ? '' : 'hidden' %>"><%= unreadCount %></span>
                </div>
                <a href="/logout" class="text-red-500 font-bold text-xs uppercase hover:underline">Logout</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 pt-8 grid grid-cols-1 lg:grid-cols-3 gap-8 pb-10">
        
        <div class="lg:col-span-2 space-y-6">
            
            <% if (announcements && announcements.length > 0) { %>
                <div class="space-y-3">
                    <p class="text-[10px] font-black text-blue-500 uppercase tracking-[0.2em] ml-2">Village Elders' Pin</p>
                    <% announcements.forEach(a => { %>
                        <div class="bg-blue-600/10 border border-blue-500/30 rounded-2xl p-4 flex gap-4 items-start shadow-[0_0_15px_rgba(37,99,235,0.1)]">
                            <span class="text-xl">üì¢</span>
                            <div>
                                <p class="text-sm text-blue-100 font-medium"><%= a.description %></p>
                                <p class="text-[10px] text-blue-400 font-black mt-1 uppercase">BY <%= a.author.split('@')[0] %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="bg-slate-900 border border-slate-800 rounded-2xl md:rounded-3xl p-4 md:p-6 shadow-xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm" class="space-y-4">
                    <textarea name="description" placeholder="What's happening in the village, <%= user.email.split('@')[0] %>?" required 
                        class="w-full bg-transparent outline-none h-20 resize-none text-base md:text-lg text-slate-200 placeholder-slate-600"></textarea>
                    
                    <div class="flex flex-col sm:flex-row items-center justify-between border-t border-slate-800 pt-4 gap-4">
                        <div class="flex items-center gap-4 w-full sm:w-auto">
                            <input type="file" name="localMedia" id="fileInput" class="hidden">
                            <label for="fileInput" class="cursor-pointer bg-slate-800 hover:bg-slate-700 text-slate-300 px-4 py-2 rounded-full text-xs font-bold transition">
                                üì∑ Add Media
                            </label>
                            <% if (user.role === 'admin') { %>
                                <label class="flex items-center gap-2 cursor-pointer">
                                    <input type="checkbox" name="is_announcement" class="rounded border-slate-800 bg-slate-950 text-blue-600">
                                    <span class="text-[10px] font-black text-slate-500 uppercase">Pin to Top</span>
                                </label>
                            <% } %>
                        </div>

                        <button type="submit" id="postBtn" class="w-full sm:w-auto bg-blue-600 px-8 py-2.5 rounded-full font-black text-white flex items-center justify-center gap-2 transition active:scale-95">
                            <span id="btnText">POST</span>
                            <svg id="btnSpinner" class="hidden animate-spin h-4 w-4 text-white" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        </button>
                    </div>
                </form>
            </div>

            <% posts.forEach(p => { %>
                <article class="bg-slate-900 border border-slate-800 rounded-2xl md:rounded-3xl p-5 md:p-6 hover:border-slate-700 transition-colors shadow-lg">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-indigo-700 rounded-full flex items-center justify-center font-bold text-white shadow-lg uppercase">
                                    <%= p.author[0] %>
                                </div>
                                <span class="absolute bottom-0 right-0 w-3 h-3 border-2 border-slate-900 rounded-full <%= p.is_online ? 'status-online' : 'status-offline' %>"></span>
                            </div>
                            <div>
                                <div class="flex items-center gap-1.5">
                                    <p class="font-bold text-sm">@<%= p.author.split('@')[0] %></p>
                                    <% if (p.is_verified) { %>
                                        <span class="text-blue-500 text-[10px]">‚úî</span>
                                    <% } %>
                                    <% if (user.id !== p.created_by) { %>
                                        <form action="/friends/request/<%= p.created_by %>" method="POST" class="ml-2">
                                            <button class="text-[9px] bg-slate-800 hover:bg-slate-700 px-2 py-0.5 rounded-full text-slate-400 uppercase font-black transition">Add +</button>
                                        </form>
                                    <% } %>
                                </div>
                                <p class="text-[9px] text-slate-500 uppercase font-black tracking-tight"><%= new Date(p.created_at).toLocaleDateString() %></p>
                            </div>
                        </div>
                        <% if (user && (user.id === p.created_by || user.role === 'admin')) { %>
                            <button onclick="openDeleteModal('<%= p.id %>')" class="text-slate-600 hover:text-red-500 transition-colors p-1">üóëÔ∏è</button>
                        <% } %>
                    </div>

                    <p class="text-slate-200 mb-4 text-sm md:text-base leading-relaxed"><%= p.description %></p>

                    <% if (p.image_url) { %>
                        <div class="rounded-2xl overflow-hidden border border-slate-800 mb-4 bg-black/40">
                            <% if (p.media_type === 'video') { %>
                                <video controls muted playsinline class="w-full max-h-[500px] bg-black">
                                    <source src="<%= p.image_url %>" type="video/mp4">
                                </video>
                            <% } else { %>
                                <img src="<%= p.image_url %>" class="w-full h-auto object-cover max-h-[600px]" loading="lazy">
                            <% } %>
                        </div>
                    <% } %>

                    <div class="flex gap-6 pt-4 border-t border-slate-800 text-sm font-bold">
                        <form action="/event/<%= p.id %>/like" method="POST">
                            <button class="transition-colors flex items-center gap-1.5 <%= p.liked_by_me ? 'text-red-500' : 'text-slate-500 hover:text-red-500' %>">
                                <span><%= p.liked_by_me ? '‚ù§Ô∏è' : 'ü§ç' %></span> <%= p.likes_count || 0 %>
                            </button>
                        </form>
                        <span class="text-slate-500 flex items-center gap-1.5 cursor-pointer hover:text-blue-500">
                            <span>üí¨</span> <%= p.comments_list ? p.comments_list.length : 0 %>
                        </span>
                    </div>

                    <div class="mt-4 space-y-2">
                        <% if (p.comments_list) { p.comments_list.forEach(c => { %>
                            <div class="bg-slate-800/40 p-2.5 rounded-xl text-xs border border-slate-800/50">
                                <span class="text-blue-400 font-bold">@<%= c.author.split('@')[0] %>:</span> 
                                <span class="text-slate-300"><%= c.content %></span>
                            </div>
                        <% })} %>
                        <form action="/event/<%= p.id %>/comment" method="POST" class="flex gap-2 mt-2">
                            <input type="text" name="content" placeholder="Reply to the square..." required class="flex-1 bg-slate-950 border border-slate-800 rounded-full px-4 py-2 text-xs outline-none focus:border-blue-600 text-white transition-all">
                            <button class="text-blue-500 font-black text-[10px] px-2 hover:underline uppercase">Send</button>
                        </form>
                    </div>
                </article>
            <% }) %>
        </div>

        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-3xl p-6 sticky top-28 shadow-xl">
                <h3 class="text-xs font-black text-blue-500 uppercase tracking-widest mb-6">Trending Topics</h3>
                <% if (trending && trending.length > 0) { %>
                    <% trending.forEach(t => { %>
                        <div class="mb-5 border-b border-slate-800 pb-3 last:border-0">
                            <p class="text-sm font-bold text-slate-200 line-clamp-2"><%= t.description %></p>
                            <p class="text-[9px] text-blue-500 font-black mt-2 uppercase tracking-wider"><%= t.c %> LIKES</p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-slate-600 text-[10px] italic">No trending talks yet.</p>
                <% } %>
            </div>
        </aside>
    </main>

    <div id="deleteModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
        <div class="absolute inset-0 bg-slate-950/90 backdrop-blur-md" onclick="closeDeleteModal()"></div>
        <div class="relative bg-slate-900 border border-slate-800 p-8 rounded-3xl max-w-sm w-full shadow-2xl">
            <h3 class="text-xl font-black mb-2 text-white">Delete Post?</h3>
            <p class="text-slate-400 text-sm mb-6">This action cannot be undone in the square.</p>
            <div class="flex flex-col gap-3">
                <form id="confirmDeleteForm" method="POST">
                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 py-3 rounded-full font-black text-white transition active:scale-95 uppercase text-xs tracking-widest">Delete Forever</button>
                </form>
                <button onclick="closeDeleteModal()" class="w-full bg-slate-800 hover:bg-slate-700 py-3 rounded-full font-black text-white transition text-xs tracking-widest uppercase">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Use the API we created in index.js
        async function checkNotifs() {
            try {
                const res = await fetch('/api/notifications');
                const data = await res.json();
                const container = document.getElementById('toast-container');
                data.forEach(n => {
                    const toast = document.createElement('div');
                    toast.className = "bg-blue-600 text-white p-4 rounded-2xl shadow-2xl mb-2 animate-notif text-xs font-black flex items-center gap-3 border border-blue-400/30";
                    toast.innerHTML = `<span class="bg-white/20 p-1 rounded-lg">üå¥</span> ${n.message}`;
                    container.appendChild(toast);
                    setTimeout(() => {
                        toast.style.opacity = '0';
                        toast.style.transform = 'translateX(-20px)';
                        toast.style.transition = '0.5s';
                        setTimeout(() => toast.remove(), 500);
                    }, 5000);
                });
                if(data.length > 0) document.getElementById('notif-badge').classList.add('hidden');
            } catch (err) { console.error(err); }
        }
        setInterval(checkNotifs, 20000);

        document.getElementById('postForm').addEventListener('submit', () => {
            const btn = document.getElementById('postBtn');
            btn.disabled = true;
            document.getElementById('btnText').innerText = "VILLAGE PROCESSING...";
            document.getElementById('btnSpinner').classList.remove('hidden');
        });

        function openDeleteModal(postId) {
            const modal = document.getElementById('deleteModal');
            document.getElementById('confirmDeleteForm').action = `/event/${postId}/delete`;
            modal.classList.replace('hidden', 'flex');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.replace('flex', 'hidden');
            document.body.style.overflow = 'auto';
        }
    </script>
</body>
</html>