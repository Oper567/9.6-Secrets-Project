<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { 
            background: radial-gradient(circle at top right, #0f172a, #020617); 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            color: #e2e8f0; 
            -webkit-tap-highlight-color: transparent;
        }
        .glass-nav {
            background: rgba(2, 6, 23, 0.8);
            backdrop-filter: blur(24px);
            -webkit-backdrop-filter: blur(24px);
            border-bottom: 1px solid rgba(255,255,255,0.03);
        }
        .status-online { 
            background-color: #22c55e; 
            box-shadow: 0 0 12px rgba(34, 197, 94, 0.6); 
        }
        .post-card {
            background: rgba(15, 23, 42, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .post-card:hover {
            border-color: rgba(59, 130, 246, 0.4);
            background: rgba(15, 23, 42, 0.6);
            transform: translateY(-2px);
        }
        .publish-box:focus-within {
            box-shadow: 0 0 40px -10px rgba(59, 130, 246, 0.15);
            border-color: rgba(59, 130, 246, 0.2);
        }
        ::-webkit-scrollbar { width: 0px; }
    </style>
</head>
<body class="min-h-screen pb-32">

    <nav class="glass-nav sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between gap-6">
            <div class="flex items-center gap-6">
                <h1 class="text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer hover:scale-105 transition-transform" onclick="window.location.href='/feed'">
                    APUGO
                </h1>
                <div class="hidden lg:block w-80 relative group">
                    <form action="/feed" method="GET">
                        <input type="text" name="search" placeholder="Search the square..." value="<%= locals.search || '' %>" 
                            class="w-full bg-white/5 border border-white/5 rounded-2xl py-2 px-10 text-[11px] font-bold uppercase tracking-widest outline-none focus:border-blue-500/50 transition-all text-white placeholder-slate-600">
                        <i class="fas fa-search absolute left-4 top-2.5 text-slate-600 text-[10px] group-focus-within:text-blue-500"></i>
                    </form>
                </div>
            </div>

            <div class="flex items-center gap-6">
                <a href="/notifications" class="relative group">
                    <i class="far fa-bell text-xl text-slate-400 group-hover:text-blue-500 transition-colors"></i>
                    <% if (locals.unreadCount && unreadCount > 0) { %>
                        <span class="absolute -top-1 -right-1 bg-blue-600 text-[8px] w-4 h-4 flex items-center justify-center rounded-full font-black border-2 border-[#020617]"><%= unreadCount %></span>
                    <% } %>
                </a>
                
                <a href="/profile" class="flex items-center gap-3 bg-white/5 pl-1 pr-3 py-1 rounded-full border border-white/5 hover:border-blue-500/30 transition-all">
                    <div class="w-8 h-8 rounded-full overflow-hidden border border-white/10">
                        <% if (locals.user && user.profile_pic) { %>
                            <img src="<%= user.profile_pic %>" class="w-full h-full object-cover">
                        <% } else { %>
                            <div class="w-full h-full bg-slate-800 flex items-center justify-center text-[10px] font-black text-blue-500 uppercase"><%= (locals.user) ? user.email[0] : '?' %></div>
                        <% } %>
                    </div>
                    <span class="hidden md:block text-[10px] font-black uppercase tracking-widest text-slate-400">Account</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 mt-8 grid grid-cols-1 lg:grid-cols-12 gap-10">
        
        <div class="lg:col-span-8 space-y-10">
            
            <% if (locals.announcements && announcements.length > 0) { %>
                <div class="space-y-4">
                    <div class="flex items-center gap-3 mb-2 px-2">
                        <div class="h-[2px] w-8 bg-blue-600"></div>
                        <p class="text-[10px] font-black text-blue-500 uppercase tracking-[0.3em]">Elderly Decrees</p>
                    </div>
                    <% announcements.forEach(a => { %>
                        <div class="bg-gradient-to-r from-blue-600/10 to-transparent border-l-4 border-blue-600 rounded-r-3xl p-6 backdrop-blur-xl group">
                            <div class="flex gap-5 items-start">
                                <div class="w-12 h-12 bg-blue-600 rounded-2xl flex items-center justify-center text-xl shadow-lg shadow-blue-600/20 group-hover:scale-110 transition-transform">ðŸ“¢</div>
                                <div class="space-y-1">
                                    <p class="text-[14px] text-blue-100 font-bold leading-relaxed tracking-tight"><%= a.description %></p>
                                    <p class="text-[9px] text-blue-500/60 font-black uppercase tracking-widest">Active decree</p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="publish-box bg-slate-900/50 border border-white/5 rounded-[3rem] p-8 shadow-2xl transition-all">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm">
                    <div class="flex gap-6">
                        <div class="w-12 h-12 shrink-0 rounded-2xl overflow-hidden bg-slate-800 ring-2 ring-white/5">
                            <% if (locals.user && user.profile_pic) { %>
                                <img src="<%= user.profile_pic %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="w-full h-full flex items-center justify-center font-black text-blue-500 uppercase"><%= user.email[0] %></div>
                            <% } %>
                        </div>
                        <textarea name="description" placeholder="What's the word in the square today?" required 
                            class="w-full bg-transparent outline-none h-24 resize-none text-[16px] text-slate-200 placeholder-slate-600 mt-2 leading-relaxed font-medium"></textarea>
                    </div>
                    <div class="flex items-center justify-between border-t border-white/5 mt-6 pt-6">
                        <div class="flex items-center gap-4">
                            <input type="file" name="localMedia" id="fileInput" class="hidden" accept="image/*,video/*">
                            <label for="fileInput" class="cursor-pointer bg-white/5 hover:bg-blue-600/10 text-slate-300 px-6 py-3 rounded-2xl text-[10px] font-black uppercase flex items-center gap-3 tracking-widest transition-all">
                                <i class="fas fa-photo-film text-blue-500"></i> Attachment
                            </label>
                        </div>
                        <button type="submit" class="bg-blue-600 hover:bg-blue-500 px-10 py-3.5 rounded-2xl font-black text-[10px] text-white uppercase tracking-[0.2em] transition-all hover:shadow-[0_0_20px_rgba(37,99,235,0.3)] active:scale-95">
                            Publish
                        </button>
                    </div>
                </form>
            </div>

            <% if (locals.posts && posts.length > 0) { %>
                <div class="space-y-8">
                    <% posts.forEach(p => { %>
                        <article class="post-card rounded-[3rem] overflow-hidden">
                            <div class="p-6 flex justify-between items-center">
                                <div class="flex items-center gap-4">
                                    <div class="relative">
                                        <div class="w-12 h-12 bg-slate-800 rounded-2xl overflow-hidden flex items-center justify-center font-black text-blue-500 text-sm uppercase ring-1 ring-white/10">
                                            <% if (p.profile_pic) { %>
                                                <img src="<%= p.profile_pic %>" class="w-full h-full object-cover">
                                            <% } else { %>
                                                <%= p.author ? p.author[0] : '?' %>
                                            <% } %>
                                        </div>
                                        <span class="absolute -bottom-1 -right-1 w-4 h-4 border-[3px] border-[#020617] rounded-full <%= p.is_online ? 'status-online' : 'bg-slate-700' %>"></span>
                                    </div>
                                    <div>
                                        <div class="flex items-center gap-2">
                                            <p class="font-bold text-[15px] tracking-tight text-white hover:text-blue-500 cursor-pointer transition-colors">@<%= p.author.split('@')[0] %></p>
                                            <% if (p.is_verified) { %>
                                                <i class="fas fa-certificate text-blue-500 text-[10px]"></i>
                                            <% } %>
                                        </div>
                                        <p class="text-[8px] text-slate-600 uppercase font-black tracking-[0.2em] mt-0.5">
                                            <%= new Date(p.created_at).toLocaleDateString() %> â€¢ Resident
                                        </p>
                                    </div>
                                </div>
                                <button class="text-slate-700 hover:text-white p-2 transition-colors"><i class="fas fa-ellipsis-h"></i></button>
                            </div>

                            <div class="px-8 pb-6">
                                <p class="text-slate-300 text-[16px] leading-[1.6] tracking-tight font-medium"><%= p.description %></p>
                            </div>

                            <% if (p.image_url) { %>
                                <div class="px-4">
                                    <div class="rounded-[2rem] overflow-hidden bg-black/40 border border-white/5">
                                        <% if (p.media_type === 'video') { %>
                                            <video controls class="w-full max-h-[500px] object-cover">
                                                <source src="<%= p.image_url %>" type="video/mp4">
                                            </video>
                                        <% } else { %>
                                            <img src="<%= p.image_url %>" class="w-full h-auto max-h-[600px] object-contain" loading="lazy">
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>

                            <div class="p-8 border-t border-white/5 mt-4 bg-white/[0.01]">
                                <div class="flex gap-10 mb-6">
                                    <form action="/event/<%= p.id %>/like" method="POST">
                                        <button type="submit" class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest transition-all <%= p.liked_by_me ? 'text-red-500' : 'text-slate-500 hover:text-red-400' %>">
                                            <i class="<%= p.liked_by_me ? 'fas' : 'far' %> fa-heart text-lg"></i>
                                            <span><%= p.likes_count || 0 %> Vibes</span>
                                        </button>
                                    </form>
                                    <button onclick="window.location.href='/event/<%= p.id %>'" class="flex items-center gap-3 text-[10px] font-black uppercase tracking-widest text-slate-500 hover:text-blue-400 transition-all">
                                        <i class="far fa-comment-dots text-lg"></i>
                                        <span><%= (p.comments_list) ? p.comments_list.length : 0 %> Comments</span>
                                    </button>
                                </div>

                                <form action="/event/<%= p.id %>/comment" method="POST" class="relative group mb-4">
                                    <div class="flex items-center gap-3 bg-slate-950/50 border border-white/5 rounded-2xl px-4 py-2 focus-within:border-blue-500/30 transition-all">
                                        <input type="text" name="content" placeholder="Add a comment..." required
                                            class="w-full bg-transparent outline-none text-[13px] text-slate-200 placeholder-slate-700 py-1 font-medium">
                                        <button type="submit" class="text-blue-600 hover:text-blue-400 px-2 transition-colors">
                                            <i class="fas fa-paper-plane text-sm"></i>
                                        </button>
                                    </div>
                                </form>

                                <% if (p.comments_list && p.comments_list.length > 0) { %>
                                    <div class="space-y-3 mt-4 border-t border-white/5 pt-4">
                                        <% p.comments_list.slice(-3).forEach(comment => { %>
                                            <div class="flex justify-between items-start group/comment">
                                                <div class="text-[12px] leading-relaxed">
                                                    <span class="font-black text-blue-500 uppercase tracking-tighter mr-2">
                                                        <%= comment.author.split('@')[0] %>
                                                    </span>
                                                    <span class="text-slate-400 font-medium"><%= comment.content %></span>
                                                </div>
                                                
                                                <% if (locals.user && (comment.user_id === user.id || user.role === 'admin')) { %>
                                                    <form action="/comment/<%= comment.id %>/delete" method="POST" class="opacity-0 group-hover/comment:opacity-100 transition-opacity">
                                                        <button type="submit" class="text-slate-700 hover:text-red-500 text-[10px]">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        <% }) %>
                                        
                                        <% if (p.comments_list.length > 3) { %>
                                            <a href="/event/<%= p.id %>" class="block text-[9px] font-black uppercase tracking-widest text-slate-600 hover:text-blue-500 mt-2 transition-colors">
                                                View all <%= p.comments_list.length %> comments
                                            </a>
                                        <% } %>
                                    </div>
                                <% } %>
                            </div>
                        </article>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <aside class="hidden lg:block lg:col-span-4 space-y-8">
            <div class="bg-slate-900/40 border border-white/5 rounded-[3rem] p-8 sticky top-28 backdrop-blur-md">
                <div class="flex items-center justify-between mb-8">
                    <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-[0.4em]">Hot Whispers</h3>
                    <div class="h-1 w-8 bg-blue-600/20 rounded-full"></div>
                </div>
                
                <% if (locals.trending && trending.length > 0) { %>
                    <div class="space-y-10">
                        <% trending.forEach((t, i) => { %>
                            <div class="group cursor-pointer relative" onclick="window.location.href='/event/<%= t.id %>'">
                                <span class="absolute -left-6 top-0 text-[32px] font-black text-white/5 group-hover:text-blue-600/20 transition-colors">0<%= i+1 %></span>
                                <p class="text-[13px] font-bold text-slate-300 group-hover:text-blue-400 transition leading-snug"><%= t.description.substring(0,60) %>...</p>
                                <div class="flex items-center gap-3 mt-3">
                                    <p class="text-[8px] text-slate-600 font-black uppercase tracking-widest"><%= t.likes_count %> Vibes</p>
                                    <div class="h-1 w-1 bg-slate-700 rounded-full"></div>
                                    <p class="text-[8px] text-blue-500/50 font-black uppercase tracking-widest">Trending</p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-[10px] text-slate-600 font-black uppercase italic tracking-widest text-center py-10">The winds are quiet...</p>
                <% } %>
            </div>
            
            <div class="p-8 text-center">
                <p class="text-[9px] text-slate-700 font-black uppercase tracking-[0.5em]">Apugo Village Â© 2025</p>
            </div>
        </aside>
    </main>

    <div class="lg:hidden fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/90 backdrop-blur-2xl border border-white/10 px-10 py-5 rounded-full flex gap-12 shadow-[0_20px_50px_rgba(0,0,0,0.5)] z-50">
        <a href="/feed" class="text-blue-500"><i class="fas fa-home text-lg"></i></a>
        <a href="/discover" class="text-slate-500 hover:text-white transition-all"><i class="fas fa-compass text-lg"></i></a>
        <a href="/notifications" class="text-slate-500 hover:text-white transition-all relative">
            <i class="fas fa-bell text-lg"></i>
            <% if (locals.unreadCount && unreadCount > 0) { %>
                <span class="absolute -top-1 -right-1 w-2 h-2 bg-blue-600 rounded-full"></span>
            <% } %>
        </a>
        <a href="/profile" class="text-slate-500 hover:text-white transition-all"><i class="fas fa-user text-lg"></i></a>
    </div>

    <script>
        // Post Button Loading State
        const postForm = document.getElementById('postForm');
        if (postForm) {
            postForm.addEventListener('submit', function() {
                const btn = this.querySelector('button[type="submit"]');
                btn.innerHTML = '<i class="fas fa-circle-notch animate-spin"></i>';
                btn.classList.add('opacity-50', 'pointer-events-none');
            });
        }
    </script>
</body>
</html>