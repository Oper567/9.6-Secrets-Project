<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { 
            background: radial-gradient(circle at top right, #0f172a, #020617); 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            color: #e2e8f0; 
            -webkit-tap-highlight-color: transparent;
        }
        .glass-nav {
            background: rgba(2, 6, 23, 0.8);
            backdrop-filter: blur(24px);
            border-bottom: 1px solid rgba(255,255,255,0.03);
        }
        .post-card {
            background: rgba(15, 23, 42, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .echo-section {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease-out;
            background: rgba(0, 0, 0, 0.2);
        }
        .echo-section.open { max-height: 1000px; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        
        /* Vibe Animation */
        .vibe-pop { animation: heartPop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        @keyframes heartPop {
            0% { transform: scale(1); }
            50% { transform: scale(1.4); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body class="min-h-screen pb-32">

    <nav class="glass-nav sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
            <h1 class="text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
            
            <div class="flex items-center gap-6">
                <a href="/notifications" class="relative group">
                    <i class="far fa-bell text-xl text-slate-400 group-hover:text-blue-500"></i>
                </a>
                <a href="/profile" class="flex items-center gap-3 bg-white/5 p-1 pr-3 rounded-full border border-white/5">
                    <div class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center border border-white/10">
                        <i class="fas fa-user text-[10px] text-slate-500"></i>
                    </div>
                    <span class="text-[10px] font-black uppercase tracking-widest hidden md:inline">My Hut</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 mt-8 grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <div class="lg:col-span-8 space-y-8">
            
            <section class="bg-slate-900/50 border border-white/5 rounded-[2.5rem] p-6 lg:p-8 shadow-2xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data">
                    <div class="flex gap-6">
                        <div class="w-12 h-12 rounded-2xl bg-slate-800 flex items-center justify-center shrink-0 ring-1 ring-white/10">
                            <i class="fas fa-pen-nib text-blue-500"></i>
                        </div>
                        <div class="w-full">
                            <textarea name="description" id="whisperInput" placeholder="What's the word in the square?" required 
                                class="w-full bg-transparent outline-none h-20 resize-none text-[16px] text-slate-200 placeholder-slate-600 font-medium"></textarea>
                            
                            <div id="previewContainer" class="hidden mt-4 relative w-32 h-32 rounded-2xl overflow-hidden border border-white/10">
                                <img id="imagePreview" class="w-full h-full object-cover">
                                <button type="button" onclick="removeMedia()" class="absolute top-2 right-2 bg-black/60 text-white w-6 h-6 rounded-full text-[10px] hover:bg-red-500 transition-colors">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between border-t border-white/5 mt-6 pt-6">
                        <label class="cursor-pointer bg-white/5 hover:bg-blue-600/10 text-slate-300 px-5 py-3 rounded-2xl text-[10px] font-black uppercase flex items-center gap-3 tracking-widest transition-all">
                            <input type="file" name="localMedia" id="fileInput" class="hidden" accept="image/*,video/*">
                            <i class="fas fa-camera text-blue-500"></i> Add Media
                        </label>
                        <button type="submit" class="bg-blue-600 hover:bg-blue-500 px-10 py-3.5 rounded-2xl font-black text-[10px] text-white uppercase tracking-widest shadow-lg shadow-blue-600/20">
                            Publish
                        </button>
                    </div>
                </form>
            </section>

            <div class="space-y-6" id="feedContainer">
                <% if (locals.posts && posts.length > 0) { %>
                    <% posts.forEach(p => { %>
                        <article class="post-card rounded-[2.5rem] overflow-hidden" id="post-<%= p.id %>">
                            <div class="p-6 flex justify-between items-center">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 rounded-xl bg-slate-800 flex items-center justify-center border border-white/10">
                                        <i class="fas fa-user text-slate-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-bold text-white text-sm">@<%= p.username || 'villager' %></p>
                                        <p class="text-[8px] text-slate-500 uppercase tracking-widest">Just now</p>
                                    </div>
                                </div>
                            </div>

                            <div class="px-8 pb-5 text-slate-300 text-[15px] leading-relaxed">
                                <%= p.description %>
                            </div>

                            <% if (p.image_url) { %>
                                <div class="px-4 pb-4">
                                    <img src="<%= p.image_url %>" class="w-full h-auto max-h-[500px] rounded-3xl object-cover border border-white/5">
                                </div>
                            <% } %>

                            <div class="px-8 py-5 border-t border-white/5 flex gap-8">
                                <button onclick="sendVibe(this, '<%= p.id %>')" class="flex items-center gap-2 text-[10px] font-black uppercase text-slate-500 hover:text-red-500 transition-all">
                                    <i class="far fa-heart text-lg"></i> 
                                    <span class="vibe-count"><%= p.likes_count || 0 %></span>
                                </button>
                                <button onclick="toggleEchoes('<%= p.id %>')" class="flex items-center gap-2 text-[10px] font-black uppercase text-slate-500 hover:text-blue-500 transition-all">
                                    <i class="far fa-comment-dots text-lg"></i> 
                                    <span>Echoes</span>
                                </button>
                            </div>

                            <div id="echoes-<%= p.id %>" class="echo-section border-t border-white/5">
                                <div class="p-6 space-y-4">
                                    <form action="/event/<%= p.id %>/comment" method="POST" class="flex gap-3 mb-6">
                                        <input type="text" name="comment" placeholder="Add an echo..." required 
                                            class="flex-1 bg-slate-900 border border-white/10 rounded-xl px-4 py-2 text-xs text-white outline-none focus:border-blue-500/50">
                                        <button type="submit" class="bg-blue-600 w-10 h-10 rounded-xl flex items-center justify-center text-white">
                                            <i class="fas fa-paper-plane text-xs"></i>
                                        </button>
                                    </form>

                                    <p class="text-[10px] text-slate-600 italic text-center">Looking for older echoes...</p>
                                </div>
                            </div>
                        </article>
                    <% }) %>
                <% } %>
            </div>

            <div id="loading" class="hidden py-10 text-center text-slate-600 text-[10px] font-black uppercase tracking-widest">
                <i class="fas fa-circle-notch fa-spin mr-2"></i> Summoning Whispers
            </div>
        </div>

        <aside class="hidden lg:block lg:col-span-4 space-y-8">
            <div class="bg-slate-900/40 border border-white/5 rounded-[2.5rem] p-8">
                <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-[0.4em] mb-8">Village Kin</h3>
                <div class="space-y-6">
                    <% if (locals.suggestedUsers) { %>
                        <% suggestedUsers.forEach(u => { %>
                            <div class="flex items-center justify-between group">
                                <div class="flex items-center gap-3">
                                    <div class="w-9 h-9 rounded-full bg-slate-800 border border-white/10 flex items-center justify-center">
                                        <i class="fas fa-user text-[10px] text-slate-500"></i>
                                    </div>
                                    <p class="text-[12px] font-bold text-slate-300">@<%= u.username %></p>
                                </div>
                                <button onclick="connectKin('<%= u.id %>')" class="text-blue-500 hover:text-white transition-colors">
                                    <i class="fas fa-plus-circle text-lg"></i>
                                </button>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>

            <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-[2.5rem] p-7 shadow-xl shadow-blue-900/20 relative overflow-hidden group cursor-pointer" onclick="window.location.href='/forum'">
                <div class="relative z-10">
                    <p class="text-[10px] font-black text-blue-200 uppercase tracking-widest mb-1">Formal Trade</p>
                    <h3 class="text-xl font-black text-white italic tracking-tighter">TOWN HALL</h3>
                </div>
                <i class="fas fa-landmark absolute -right-4 -bottom-4 text-7xl text-black/10 group-hover:scale-110 transition-transform"></i>
            </div>
        </aside>
    </main>

    <script>
        // Toggle Echoes
        function toggleEchoes(id) {
            document.getElementById(`echoes-${id}`).classList.toggle('open');
        }

        // Handle Vibe (Like)
        async function sendVibe(btn, postId) {
            const icon = btn.querySelector('i');
            const count = btn.querySelector('.vibe-count');
            
            icon.classList.toggle('fas'); icon.classList.toggle('far');
            btn.classList.toggle('text-red-500');
            btn.classList.add('vibe-pop');
            setTimeout(() => btn.classList.remove('vibe-pop'), 400);

            try {
                const res = await fetch(`/event/${postId}/like`, { method: 'POST' });
                const data = await res.json();
                if (data.success) count.innerText = data.newCount;
            } catch (e) { console.error("Vibe error"); }
        }

        // Media Preview Logic
        const fileInput = document.getElementById('fileInput');
        fileInput.onchange = e => {
            const [file] = fileInput.files;
            if (file) {
                document.getElementById('imagePreview').src = URL.createObjectURL(file);
                document.getElementById('previewContainer').classList.remove('hidden');
            }
        };

        function removeMedia() {
            fileInput.value = "";
            document.getElementById('previewContainer').classList.add('hidden');
        }

        // Connect Logic
        async function connectKin(id) {
            alert("Sent kinship request to villager!");
        }
    </script>
</body>
</html>