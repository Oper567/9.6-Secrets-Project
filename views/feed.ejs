<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apugo | Village Square</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">

    <style>
        body { 
            background-color: #020617; 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            color: #e2e8f0; 
            -webkit-tap-highlight-color: transparent;
        }

        .glass-nav {
            background: rgba(15, 23, 42, 0.85);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        .status-online { background-color: #22c55e; box-shadow: 0 0 10px #22c55e; }
        .status-offline { background-color: #64748b; }

        ::-webkit-scrollbar { width: 0px; background: transparent; }

        .post-card { transition: transform 0.2s ease, border-color 0.2s ease; }
        .post-card:hover { border-color: rgba(59, 130, 246, 0.3); }

        #nav-dropdown:not(.hidden) { animation: slideDown 0.2s ease-out forwards; }
        @keyframes slideDown { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }

        .media-container { background: radial-gradient(circle at center, #0f172a 0%, #020617 100%); }
    </style>
</head>
<body class="min-h-screen pb-24">

    <!-- NAVBAR -->
    <nav class="glass-nav sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 py-3 flex flex-col lg:flex-row justify-between items-center gap-4">
            <div class="flex items-center justify-between w-full lg:w-auto">
                <div class="flex items-center gap-4">
                    <button id="menu-btn" class="lg:hidden text-slate-400 p-1"><i class="fas fa-bars text-xl"></i></button>
                    <h1 class="text-xl md:text-2xl font-black text-blue-500 italic tracking-tighter cursor-pointer" onclick="window.location.href='/feed'">APUGO</h1>
                </div>

                <div class="flex lg:hidden items-center gap-4">
                    <div class="relative cursor-pointer" onclick="window.location.href='/notifications'">
                        <i class="far fa-bell text-xl text-slate-400"></i>
                        <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                            <span class="absolute -top-1 -right-1 bg-red-600 text-[8px] min-w-[14px] h-[14px] flex items-center justify-center rounded-full border border-slate-900 font-black"><%= unreadCount %></span>
                        <% } %>
                    </div>
                </div>
            </div>

            <div id="nav-dropdown" class="hidden lg:flex flex-col lg:flex-row items-center gap-4 w-full lg:max-w-md">
                <form action="/feed" method="GET" class="relative w-full">
                    <input type="text" name="search" placeholder="Search the square..." value="<%= (typeof search !== 'undefined') ? search : '' %>" 
                        class="w-full bg-slate-950 border border-slate-800 rounded-2xl py-3 px-12 text-xs outline-none focus:border-blue-600 transition-all text-white placeholder-slate-600">
                    <i class="fas fa-search absolute left-4 top-3.5 text-slate-600 text-xs"></i>
                </form>
            </div>

            <div class="hidden lg:flex items-center gap-5">
                <div class="relative cursor-pointer group" onclick="window.location.href='/notifications'">
                    <i class="far fa-bell text-xl text-slate-400 group-hover:text-blue-400 transition"></i>
                    <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                        <span class="absolute -top-1 -right-1 bg-red-600 text-[8px] min-w-[14px] h-[14px] flex items-center justify-center rounded-full border border-slate-900 font-black"><%= unreadCount %></span>
                    <% } %>
                </div>

                <a href="/profile" class="w-9 h-9 rounded-full overflow-hidden border-2 border-slate-800 hover:border-blue-500 transition-all duration-300">
                    <% if (typeof user !== 'undefined' && user && user.profile_pic) { %>
                        <img src="<%= user.profile_pic %>" class="w-full h-full object-cover">
                    <% } else { %>
                        <div class="w-full h-full bg-slate-800 flex items-center justify-center text-xs font-bold text-blue-500 uppercase">
                            <%= (typeof user !== 'undefined' && user && user.email) ? user.email[0] : '?' %>
                        </div>
                    <% } %>
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 pt-6 grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2 space-y-8">

            <% if (typeof announcements !== 'undefined' && announcements && announcements.length > 0) { %>
                <div class="space-y-3">
                    <div class="flex items-center gap-2 mb-1">
                        <div class="h-1 w-4 bg-blue-600"></div>
                        <p class="text-[9px] font-black text-blue-500 uppercase tracking-[0.2em]">Elders' Pin</p>
                    </div>
                    <% announcements.forEach(a => { %>
                        <div class="bg-blue-600/5 border border-blue-500/20 rounded-[2rem] p-5 flex gap-4 items-center backdrop-blur-md">
                            <div class="w-10 h-10 bg-blue-600/20 rounded-2xl flex items-center justify-center text-lg">ðŸ“¢</div>
                            <p class="text-xs text-blue-100 font-semibold leading-relaxed tracking-tight"><%= a.description || 'New announcement from the elders.' %></p>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="bg-slate-900 border border-slate-800 rounded-[2.5rem] p-6 shadow-2xl">
                <form action="/event/create" method="POST" enctype="multipart/form-data" id="postForm" class="space-y-5">
                    <div class="flex gap-4">
                        <div class="w-11 h-11 shrink-0 rounded-full overflow-hidden bg-slate-800 border-2 border-slate-800 shadow-lg">
                            <% if (typeof user !== 'undefined' && user && user.profile_pic) { %>
                                <img src="<%= user.profile_pic %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="w-full h-full flex items-center justify-center font-bold text-blue-500 uppercase">
                                    <%= (typeof user !== 'undefined' && user && user.email) ? user.email[0] : '?' %>
                                </div>
                            <% } %>
                        </div>
                        <textarea name="description" placeholder="Whisper a secret into the square..." required 
                            class="w-full bg-transparent outline-none h-20 resize-none text-[15px] text-slate-200 placeholder-slate-600 mt-2 leading-relaxed"></textarea>
                    </div>
                    <div class="flex items-center justify-between border-t border-slate-800/50 pt-4">
                        <div class="flex items-center gap-3">
                            <input type="file" name="localMedia" id="fileInput" class="hidden" accept="image/*,video/*">
                            <label for="fileInput" class="cursor-pointer bg-slate-800 hover:bg-slate-700 text-slate-300 px-5 py-2.5 rounded-2xl text-[10px] font-black uppercase flex items-center gap-2 tracking-widest shadow-inner">
                                <i class="fas fa-camera text-blue-500"></i> Media
                            </label>
                        </div>
                        <button type="submit" class="bg-blue-600 hover:bg-blue-500 px-8 py-3 rounded-2xl font-black text-[10px] text-white uppercase tracking-[0.2em] transition-all active:scale-95 shadow-xl shadow-blue-600/20">
                            Publish
                        </button>
                    </div>
                </form>
            </div>

            <% if (typeof posts !== 'undefined' && posts && posts.length > 0) { %>
                <% posts.forEach(p => { %>
                    <article class="post-card bg-slate-900 border border-slate-800 rounded-[2.5rem] overflow-hidden shadow-2xl">
                        <div class="p-5 flex justify-between items-center">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <div class="w-11 h-11 bg-slate-800 border-2 border-slate-800 rounded-full overflow-hidden flex items-center justify-center font-bold text-blue-500 text-sm uppercase shadow-md">
                                        <% if (p.profile_pic) { %>
                                            <img src="<%= p.profile_pic %>" class="w-full h-full object-cover">
                                        <% } else { %>
                                            <%= p.author ? p.author[0] : '?' %>
                                        <% } %>
                                    </div>
                                    <span class="absolute bottom-0 right-0 w-3.5 h-3.5 border-[3px] border-slate-900 rounded-full <%= p.is_online ? 'status-online' : 'status-offline' %>"></span>
                                </div>
                                <div>
                                    <div class="flex items-center gap-1.5">
                                        <p class="font-black text-sm tracking-tight">@<%= p.author ? p.author.split('@')[0] : 'Anon' %></p>
                                        <% if (p.is_verified) { %>
                                            <i class="fas fa-check-circle text-blue-500 text-[11px]"></i>
                                        <% } %>
                                    </div>
                                    <p class="text-[9px] text-slate-600 uppercase font-black tracking-widest mt-0.5">
                                        <%= p.created_at ? new Date(p.created_at).toLocaleDateString() : 'Ancient' %>
                                    </p>
                                </div>
                            </div>

                            <% if (typeof user !== 'undefined' && user && user.id !== p.created_by) { %>
                                <form action="/friends/request/<%= p.created_by %>" method="POST">
                                    <button class="text-[9px] border border-slate-800 px-4 py-2 rounded-xl text-slate-400 uppercase font-black tracking-widest hover:text-white hover:border-blue-500 transition-all">Add +</button>
                                </form>
                            <% } %>
                        </div>

                        <div class="px-6 pb-4">
                            <p class="text-slate-300 text-[15px] leading-relaxed tracking-tight"><%= p.description || '' %></p>
                        </div>

                        <% if (p.image_url) { %>
                            <div class="media-container flex items-center justify-center border-y border-slate-800/50">
                                <% if (p.media_type === 'video') { %>
                                    <video controls preload="metadata" class="w-full max-h-[450px]">
                                        <source src="<%= p.image_url %>" type="video/mp4">
                                    </video>
                                <% } else { %>
                                    <img src="<%= p.image_url %>" class="w-full h-auto max-h-[550px] object-contain" loading="lazy">
                                <% } %>
                            </div>
                        <% } %>

                        <div class="p-6">
                            <div class="flex gap-8 text-[10px] font-black uppercase tracking-widest">
                                <form action="/event/<%= p.id %>/like" method="POST" class="inline">
                                    <button type="submit" class="flex items-center gap-2.5 <%= p.liked_by_me ? 'text-red-500' : 'text-slate-500' %> hover:scale-105 transition-transform">
                                        <i class="<%= p.liked_by_me ? 'fas' : 'far' %> fa-heart text-base"></i>
                                        <span><%= p.likes_count || 0 %> Vibes</span>
                                    </button>
                                </form>
                                <button class="flex items-center gap-2.5 text-slate-500 hover:text-blue-500 transition-colors">
                                    <i class="far fa-comment text-base"></i>
                                    <span><%= (p.comments_list) ? p.comments_list.length : 0 %> Whispers</span>
                                </button>
                            </div>

                            <div class="mt-6 space-y-3 border-t border-slate-800/50 pt-5">
                                <% if (p.comments_list && p.comments_list.length > 0) { %>
                                    <% p.comments_list.slice(0,2).forEach(c => { %>
                                        <div class="text-[12px] flex gap-2 items-start bg-slate-950/30 p-2 rounded-xl">
                                            <span class="text-blue-500 font-black shrink-0">@<%= c.author ? c.author.split('@')[0] : 'Anon' %>:</span>
                                            <span class="text-slate-400 italic">"<%= c.content || '' %>"</span>
                                        </div>
                                    <% }) %>
                                <% } %>

                                <form action="/event/<%= p.id %>/comment" method="POST" class="mt-4 flex gap-3">
                                    <input type="text" name="content" placeholder="Whisper back..." required 
                                        class="flex-1 bg-slate-950/50 border border-slate-800 rounded-2xl px-5 py-3 text-xs outline-none focus:border-blue-600 transition-all text-white">
                                    <button type="submit" class="text-blue-500 text-[10px] font-black uppercase px-2 hover:text-white tracking-widest">Send</button>
                                </form>
                            </div>
                        </div>
                    </article>
                <% }) %>
            <% } else { %>
                <div class="text-center py-12">
                    <p class="text-slate-400 text-sm italic">The square is quiet. Be the first to whisper.</p>
                </div>
            <% } %>
        </div>

        <!-- SIDEBAR -->
        <aside class="hidden lg:block">
            <div class="bg-slate-900 border border-slate-800 rounded-[2.5rem] p-8 sticky top-28 shadow-2xl">
                <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-[0.3em] mb-8 flex items-center gap-3">
                    <i class="fas fa-bolt text-xs"></i> Hot Whispers
                </h3>

                <% if (typeof trending !== 'undefined' && trending && trending.length > 0) { %>
                    <div class="space-y-8">
                        <% trending.forEach(t => { %>
                            <div class="group cursor-pointer" onclick="window.location.href='/feed?search=<%= t.description ? encodeURIComponent(t.description.split(\" \")[0]) : '' %>'">
                                <p class="text-sm font-black text-slate-200 group-hover:text-blue-400 transition leading-snug">#<%= t.description || 'Unknown' %></p>
                                <p class="text-[9px] text-slate-600 font-black uppercase mt-2 tracking-widest"><%= t.likes_count || 0 %> Soul Reactions</p>
                            </div>
                        <% }) %>
                    </div>
                </div>
                <div class="mt-12 pt-8 border-t border-slate-800">
                    <div class="flex items-center gap-3 opacity-30 grayscale">
                        <h1 class="text-lg font-black text-white italic tracking-tighter">APUGO</h1>
                        <span class="h-px w-full bg-slate-700"></span>
                    </div>
                    <p class="text-[8px] text-slate-700 uppercase font-black mt-4 tracking-[0.4em]">Resident ID: <%= (typeof user !== 'undefined' && user && user.id) ? user.id.toString().substring(0,8) : '--------' %></p>
                </div>
            </div>
        </aside>
    </main>

    <!-- MOBILE NAV -->
    <div class="lg:hidden fixed bottom-6 left-1/2 -translate-x-1/2 bg-slate-900/90 backdrop-blur-xl border border-white/10 px-8 py-4 rounded-full flex gap-12 shadow-2xl z-50">
        <a href="/feed" class="text-blue-500"><i class="fas fa-home text-xl"></i></a>
        <a href="/discover" class="text-slate-500 hover:text-blue-400"><i class="fas fa-compass text-xl"></i></a>
        <a href="/messages" class="text-slate-500 hover:text-blue-400 relative"><i class="fas fa-comment-dots text-xl"></i></a>
        <a href="/profile" class="text-slate-500 hover:text-blue-400"><i class="fas fa-user-circle text-xl"></i></a>
    </div>

    <!-- JAVASCRIPT -->
    <script>
        // MOBILE MENU TOGGLE
        const menuBtn = document.getElementById('menu-btn');
        const navDropdown = document.getElementById('nav-dropdown');

        if (menuBtn && navDropdown) {
            menuBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                navDropdown.classList.toggle('hidden');
            });
        }

            document.addEventListener('click', function(e) {
                if (!navDropdown.classList.contains('hidden') && !navDropdown.contains(e.target)) {
                    navDropdown.classList.add('hidden');
                }
            });
        }

        // POST FORM LOADING STATE
        const postForm = document.getElementById('postForm');
        if (postForm) {
            postForm.addEventListener('submit', function() {
                const btn = this.querySelector('button[type="submit"]');
                btn.innerHTML = '<i class="fas fa-spinner animate-spin"></i>';
                btn.classList.add('opacity-50', 'pointer-events-none');
            });
        }
    </script>

</body>
</html>